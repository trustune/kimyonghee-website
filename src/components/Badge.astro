---
interface Props {
  variant?: 'ssci' | 'scie' | 'kci' | 'working' | 'tag' | 'category' | 'default';
  text: string;
  rounded?: 'small' | 'medium' | 'full';
  size?: 'small' | 'medium';
}

const {
  variant = 'default',
  text,
  rounded = 'small',
  size = 'medium'
} = Astro.props;
---

<span class={`badge badge--${variant} badge--round-${rounded} badge--${size}`}>
  {text}
</span>

<style>
  .badge {
    display: inline-flex;
    align-items: center;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    background: transparent;
    border: 1px solid var(--color-border);
    color: var(--color-text-secondary);
  }

  /* Sizes */
  .badge--small {
    padding: 0.125rem 0.4rem;
    font-size: 0.625rem;
  }

  .badge--medium {
    padding: 0.1875rem 0.5rem;
    font-size: 0.6875rem;
  }

  /* Rounded */
  .badge--round-small {
    border-radius: var(--border-radius);
  }

  .badge--round-medium {
    border-radius: 6px;
  }

  .badge--round-full {
    border-radius: 999px;
  }

  /* Variants - Indexing badges with accent colors */
  .badge--ssci {
    border-color: var(--color-accent);
    color: var(--color-accent);
  }

  .badge--scie {
    border-color: #b45309;
    color: #b45309;
  }

  .badge--kci {
    border-color: var(--color-accent);
    color: var(--color-accent);
  }

  /* Other variants - border-only, neutral */
  .badge--working {}
  .badge--category {}
  .badge--default {}

  .badge--tag {
    text-transform: none;
    letter-spacing: normal;
  }
</style>
