---
interface Props {
  variant?: 'ssci' | 'scie' | 'scopus' | 'if' | 'citations' | 'wip' | 'working' | 'opinion' | 'editorial' | 'category' | 'tag' | 'default';
  text: string;
  rounded?: 'small' | 'medium' | 'full';
  size?: 'small' | 'medium' | 'large';
}

const {
  variant = 'default',
  text,
  rounded = 'small',
  size = 'medium'
} = Astro.props;
---

<span class={`badge badge--${variant} badge--${rounded} badge--${size}`}>
  {text}
</span>

<style>
  .badge {
    display: inline-flex;
    align-items: center;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.025em;
  }

  /* Sizes */
  .badge--small {
    padding: 0.125rem 0.5rem;
    font-size: 0.625rem;
  }

  .badge--medium {
    padding: 0.25rem 0.625rem;
    font-size: 0.75rem;
  }

  .badge--large {
    padding: 0.375rem 0.875rem;
    font-size: 0.8125rem;
  }

  /* Rounded */
  .badge--small {
    border-radius: 4px;
  }

  .badge--medium {
    border-radius: 6px;
  }

  .badge--full {
    border-radius: 999px;
  }

  /* Variants - Publications */
  .badge--ssci {
    background: #dbeafe;
    color: #1e40af;
  }

  .badge--scie {
    background: #fef3c7;
    color: #92400e;
  }

  .badge--scopus {
    background: #e0e7ff;
    color: #4338ca;
  }

  .badge--if {
    background: #d1fae5;
    color: #065f46;
  }

  .badge--citations {
    background: #f3e8ff;
    color: #6b21a8;
  }

  .badge--wip {
    background: #fef3c7;
    color: #92400e;
  }

  .badge--working {
    background: #e0e7ff;
    color: #4338ca;
  }

  /* Variants - Media */
  .badge--opinion {
    background: #dbeafe;
    color: #1e40af;
  }

  .badge--editorial {
    background: #fce7f3;
    color: #9f1239;
  }

  .badge--category {
    background: #dbeafe;
    color: #1e40af;
  }

  /* Variants - Blog */
  .badge--tag {
    background: #f3f4f6;
    color: #6b7280;
    text-transform: none;
  }

  .badge--default {
    background: #e5e7eb;
    color: #4b5563;
  }
</style>
