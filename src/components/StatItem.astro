---
interface Props {
  value: string | number;
  label: string;
  sublabel?: string;
  align?: 'left' | 'center' | 'right';
  size?: 'small' | 'medium' | 'large';
}

const {
  value,
  label,
  sublabel,
  align = 'center',
  size = 'medium'
} = Astro.props;
---

<div class={`stat-item stat-item--${align} stat-item--${size}`}>
  <span class="stat-item__value">{value}</span>
  <div class="stat-item__label">{label}</div>
  {sublabel && (
    <div class="stat-item__sublabel">{sublabel}</div>
  )}
</div>

<style>
  .stat-item {
    display: flex;
    flex-direction: column;
    gap: var(--space-1);
  }

  /* Alignment */
  .stat-item--left {
    text-align: left;
    align-items: flex-start;
  }

  .stat-item--center {
    text-align: center;
    align-items: center;
  }

  .stat-item--right {
    text-align: right;
    align-items: flex-end;
  }

  /* Value */
  .stat-item__value {
    font-family: var(--font-serif);
    font-weight: 600;
    color: var(--color-text);
    display: block;
  }

  .stat-item--small .stat-item__value {
    font-size: var(--step-1);
  }

  .stat-item--medium .stat-item__value {
    font-size: var(--step-2);
  }

  .stat-item--large .stat-item__value {
    font-size: var(--step-3);
  }

  /* Label */
  .stat-item__label {
    font-size: 0.8125rem;
    color: var(--color-text-muted);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  /* Sublabel */
  .stat-item__sublabel {
    font-size: 0.75rem;
    color: var(--color-text-muted);
  }
</style>
