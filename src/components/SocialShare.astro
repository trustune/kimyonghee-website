---
interface Props {
  title: string;
  url: string;
  excerpt?: string;
  image?: string;
}

const { title, url, excerpt = '', image = '' } = Astro.props;

const shareUrl = encodeURIComponent(url);
const shareTitle = encodeURIComponent(title);
const shareExcerpt = excerpt ? encodeURIComponent(excerpt) : '';
const shareImage = image ? encodeURIComponent(image) : '';

// Create share text with excerpt
const twitterText = excerpt
  ? encodeURIComponent(`${title}\n\n${excerpt}`)
  : shareTitle;

// Bluesky share text - URL은 자동으로 링크로 변환됨
const blueskyText = excerpt
  ? `${title}\n\n${excerpt}\n\n${url}`
  : `${title}\n\n${url}`;
---

<div class="social-share">
  <span class="social-share__label">Share:</span>
  <div class="social-share__buttons">
    <a
      href={`https://twitter.com/intent/tweet?text=${twitterText}&url=${shareUrl}`}
      target="_blank"
      rel="noopener noreferrer"
      class="social-share__button social-share__button--twitter"
      aria-label="Share on Twitter"
    >
      <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
        <path d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z"/>
      </svg>
    </a>
    <a
      href={`https://www.facebook.com/sharer/sharer.php?u=${shareUrl}`}
      target="_blank"
      rel="noopener noreferrer"
      class="social-share__button social-share__button--facebook"
      aria-label="Share on Facebook"
    >
      <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
        <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
      </svg>
    </a>
    <a
      href={`https://www.linkedin.com/shareArticle?mini=true&url=${shareUrl}&title=${shareTitle}${excerpt ? `&summary=${shareExcerpt}` : ''}`}
      target="_blank"
      rel="noopener noreferrer"
      class="social-share__button social-share__button--linkedin"
      aria-label="Share on LinkedIn"
    >
      <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
        <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
      </svg>
    </a>
    <a
      href={`https://bsky.app/intent/compose?text=${encodeURIComponent(blueskyText)}`}
      target="_blank"
      rel="noopener noreferrer"
      class="social-share__button social-share__button--bluesky"
      aria-label="Share on Bluesky"
    >
      <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
        <path d="M12 10.8c-1.087-2.114-4.046-6.053-6.798-7.995C2.566.944 1.561 1.266.902 1.565.139 1.908 0 3.08 0 3.768c0 .69.378 5.65.624 6.479.815 2.736 3.713 3.66 6.383 3.364.136-.02.275-.038.416-.054-2.36.166-4.67.886-5.353 2.795-.52 1.454.062 2.94 1.453 3.572C5.817 21.467 9.741 20 12 20s6.183 1.467 8.477 0c1.391-.632 1.973-2.118 1.453-3.572-.683-1.909-2.993-2.629-5.353-2.795.14.016.28.034.416.054 2.67.296 5.568-.628 6.383-3.364.246-.829.624-5.789.624-6.479 0-.688-.139-1.86-.902-2.203-.659-.299-1.664-.621-4.3 1.24C16.046 4.748 13.087 8.687 12 10.8z"/>
      </svg>
    </a>
  </div>
</div>

<style>
  .social-share {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 1.5rem;
    border-top: 1px solid #e5e7eb;
    border-bottom: 1px solid #e5e7eb;
    margin: 2rem 0;
  }

  .social-share__label {
    font-size: 0.875rem;
    font-weight: 600;
    color: #6b7280;
  }

  .social-share__buttons {
    display: flex;
    gap: 0.75rem;
  }

  .social-share__button {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    border-radius: 50%;
    transition: all 0.2s;
  }

  .social-share__button--twitter {
    background: #1da1f2;
    color: white;
  }

  .social-share__button--twitter:hover {
    background: #1a91da;
    transform: translateY(-2px);
  }

  .social-share__button--facebook {
    background: #1877f2;
    color: white;
  }

  .social-share__button--facebook:hover {
    background: #166fe5;
    transform: translateY(-2px);
  }

  .social-share__button--linkedin {
    background: #0077b5;
    color: white;
  }

  .social-share__button--linkedin:hover {
    background: #006399;
    transform: translateY(-2px);
  }

  .social-share__button--bluesky {
    background: #1185fe;
    color: white;
  }

  .social-share__button--bluesky:hover {
    background: #0d6edb;
    transform: translateY(-2px);
  }
</style>
