---
// Pagefind search component
---
<div id="search" class="w-full max-w-3xl mx-auto"></div>
<link href="/pagefind/pagefind-ui.css" rel="stylesheet">
<script is:inline src="/pagefind/pagefind-ui.js"></script>
<script is:inline>
  window.addEventListener('DOMContentLoaded', (event) => {
    if (window.PagefindUI) {
      new PagefindUI({
        element: "#search",
        showSubResults: true,
        showImages: false,
        excerptLength: 15,
        translations: {
          placeholder: "Search...",
          clear_search: "Clear",
          load_more: "Load more",
          search_label: "Search",
          filters_label: "Filters",
          zero_results: "No results for [SEARCH_TERM]",
          many_results: "[COUNT] results",
          one_result: "1 result",
          alt_search: "Search results for [SEARCH_TERM]",
          search_suggestion: "Enter a search term to see results",
          searching: "Searching..."
        }
      });
    }
  });
</script>
<style>
  /* Dark mode */
  :global(.dark) #search {
    --pagefind-ui-primary: #eeeeee;
    --pagefind-ui-text: #eeeeee;
    --pagefind-ui-background: var(--color-surface);
    --pagefind-ui-border: var(--color-border);
    --pagefind-ui-tag: var(--color-surface);
    --pagefind-ui-border-width: 1px;
    --pagefind-ui-border-radius: 4px;
    --pagefind-ui-image-border-radius: 4px;
    --pagefind-ui-image-box-ratio: 3 / 2;
    --pagefind-ui-font: inherit;
  }
  /* Light mode */
  #search {
    --pagefind-ui-primary: var(--color-accent);
    --pagefind-ui-text: var(--color-text);
    --pagefind-ui-background: var(--color-bg);
    --pagefind-ui-border: var(--color-border);
    --pagefind-ui-tag: var(--color-surface);
    --pagefind-ui-border-width: 1px;
    --pagefind-ui-border-radius: 4px;
    --pagefind-ui-image-border-radius: 4px;
    --pagefind-ui-image-box-ratio: 3 / 2;
    --pagefind-ui-font: inherit;
  }
</style>
