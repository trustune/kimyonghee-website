---
import Badge from './Badge.astro';

interface Props {
  article: {
    title: string;
    title_ko?: string;
    url: string;
    outlet: string;
    date: string;
    type?: string;
    category?: string;
    description?: string;
  };
  variant?: 'full' | 'compact';
  showBadge?: boolean;
}

const {
  article,
  variant = 'full',
  showBadge = true
} = Astro.props;
---

<article class={`article-card article-card--${variant}`}>
  <a href={article.url} target="_blank" rel="noopener" class="article-card__link">
    {variant === 'full' && (
      <div class="article-card__header">
        <span class="article-card__meta">
          {article.outlet}
          <span class="article-card__separator"> · </span>
          <time datetime={article.date}>
            {new Date(article.date).toLocaleDateString('en-US', {
              year: 'numeric',
              month: 'short',
              day: 'numeric'
            })}
          </time>
        </span>
        {showBadge && article.category && (
          <Badge variant="category" text={article.category} size="small" />
        )}
      </div>
    )}

    <h3 class="article-card__title">
      {article.title}
      <span class="article-card__arrow"> ↗</span>
    </h3>

    {variant === 'compact' && (
      <div class="article-card__meta">
        <span>{article.outlet}</span>
        <span class="article-card__separator"> · </span>
        <time datetime={article.date}>
          {new Date(article.date).toLocaleDateString('en-US', {
            year: 'numeric',
            month: 'short'
          })}
        </time>
      </div>
    )}
  </a>
</article>

<style>
  .article-card {
    padding: var(--space-6) 0;
    border-bottom: 1px solid var(--color-border-light);
  }

  .article-card:last-child {
    border-bottom: none;
  }

  .article-card__link {
    text-decoration: none;
    display: block;
  }

  .article-card__header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom: var(--space-2);
  }

  .article-card__meta {
    font-size: 0.8125rem;
    color: var(--color-text-muted);
  }

  .article-card__separator {
    color: var(--color-border);
  }

  .article-card__title {
    font-family: var(--font-serif);
    font-size: var(--step-1);
    font-weight: 400;
    line-height: 1.4;
    color: var(--color-text);
    transition: color var(--transition-fast);
  }

  .article-card__link:hover .article-card__title {
    color: var(--color-accent);
  }

  .article-card__arrow {
    color: var(--color-text-muted);
    font-size: 0.875rem;
  }

  .article-card--compact {
    padding: var(--space-4) 0;
  }

  .article-card--compact .article-card__title {
    font-size: var(--step-0);
    margin-bottom: var(--space-1);
  }
</style>
