---
import Badge from './Badge.astro';

interface Props {
  publication: {
    id?: string;
    title: string;
    authors: string[];
    journal?: string;
    year: number;
    volume?: string;
    issue?: string;
    pages?: string;
    abstract?: string;
    status?: string;
    type?: string;
    impact_factor?: number;
    quartile?: string;
    citations?: number;
    doi?: string;
    pdf?: string;
  };
  variant?: 'full' | 'compact' | 'list';
  showAbstract?: boolean;
  showBadges?: boolean;
  showLinks?: boolean;
}

const {
  publication: pub,
  variant = 'full',
  showAbstract = true,
  showBadges = true,
  showLinks = true
} = Astro.props;

const statusParts = [
  pub.status === 'published' ? 'PUBLISHED' : pub.status?.toUpperCase(),
  pub.year,
  pub.type?.toUpperCase()
].filter(Boolean);
---

<article class={`publication-card publication-card--${variant}`}>
  {variant === 'full' && pub.status && (
    <div class="publication-status">
      {statusParts.join(' \u00b7 ')}
    </div>
  )}

  <h3 class="publication-title">
    {pub.id ? (
      <a href={`/research/${pub.id}`}>{pub.title}</a>
    ) : (
      pub.title
    )}
  </h3>

  <div class="publication-authors">
    {pub.authors.join(', ')}
  </div>

  {pub.journal && (
    <div class="publication-journal">
      <em>{pub.journal}</em>
      {pub.volume && `, Vol. ${pub.volume}`}
      {pub.issue && `(${pub.issue})`}
      {pub.pages && `, pp. ${pub.pages}`}
      {variant === 'compact' && (
        <>
          {' \u00b7 '}{pub.year}
          {pub.impact_factor && ` \u00b7 IF ${pub.impact_factor}`}
        </>
      )}
    </div>
  )}

  {showAbstract && pub.abstract && variant !== 'compact' && (
    <p class="publication-abstract">{pub.abstract}</p>
  )}

  {showBadges && (pub.type || pub.quartile) && (
    <div class="publication-badges">
      {pub.type && (
        <Badge variant={pub.type.toLowerCase() as any} text={pub.type.toUpperCase()} size="small" />
      )}
      {pub.quartile && (
        <Badge variant="default" text={pub.quartile} size="small" />
      )}
    </div>
  )}

  {showLinks && (pub.doi || pub.pdf) && (
    <div class="publication-links">
      {pub.doi && (
        <a href={`https://doi.org/${pub.doi}`} target="_blank" rel="noopener noreferrer" class="publication-link">
          Publication &#x2197;
        </a>
      )}
      {pub.pdf && (
        <a href={pub.pdf} target="_blank" rel="noopener noreferrer" class="publication-link">
          PDF &#x2197;
        </a>
      )}
    </div>
  )}
</article>

<style>
  .publication-card {
    padding: var(--space-6);
    border: 1px solid var(--color-border);
    border-radius: var(--border-radius);
    background: var(--color-bg);
    transition: border-color var(--transition-base);
  }

  .publication-card:hover {
    border-color: var(--color-accent);
  }

  .publication-card--compact {
    padding: var(--space-4);
  }

  .publication-card--list {
    padding: var(--space-4);
  }

  .publication-status {
    font-size: 0.75rem;
    font-weight: 500;
    color: var(--color-text-muted);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-bottom: var(--space-3);
  }

  .publication-title {
    font-family: var(--font-serif);
    font-size: var(--step-1);
    font-weight: 600;
    margin-bottom: var(--space-3);
    line-height: 1.4;
  }

  .publication-card--compact .publication-title {
    font-size: 1rem;
  }

  .publication-card--list .publication-title {
    font-size: 0.9375rem;
  }

  .publication-title a {
    color: var(--color-text);
    text-decoration: none;
    transition: color var(--transition-fast);
  }

  .publication-title a:hover {
    text-decoration: underline;
    text-underline-offset: 2px;
  }

  .publication-authors {
    font-size: 0.9375rem;
    color: var(--color-text-secondary);
    margin-bottom: var(--space-2);
  }

  .publication-journal {
    font-size: 0.875rem;
    color: var(--color-text-muted);
    margin-bottom: var(--space-4);
  }

  .publication-abstract {
    font-size: var(--step-0);
    color: var(--color-text-secondary);
    line-height: 1.6;
    margin-bottom: var(--space-4);
  }

  .publication-badges {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-2);
    margin-bottom: var(--space-4);
  }

  .publication-links {
    display: flex;
    gap: var(--space-4);
    padding-top: var(--space-4);
    border-top: 1px solid var(--color-border-light);
  }

  .publication-link {
    color: var(--color-accent);
    text-decoration: none;
    font-size: 0.8125rem;
    font-weight: 500;
    transition: color var(--transition-fast);
  }

  .publication-link:hover {
    color: var(--color-accent-hover);
  }
</style>
