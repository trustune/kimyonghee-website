---
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';

const allPosts = await getCollection('blog');
const sortedPosts = allPosts.sort((a, b) =>
  new Date(b.data.date).getTime() - new Date(a.data.date).getTime()
);

// Calculate tag statistics
const tagStats = {};
allPosts.forEach(post => {
  if (post.data.tags && post.data.tags.length > 0) {
    post.data.tags.forEach(tag => {
      tagStats[tag] = (tagStats[tag] || 0) + 1;
    });
  }
});

// Sort tags by frequency
const sortedTags = Object.entries(tagStats)
  .sort((a, b) => b[1] - a[1])
  .map(([tag, count]) => ({ tag, count }));

const title = "Blog | Yonghee Kim";
const description = "Thoughts on media policy, technology, and research.";
---

<BaseLayout title={title} description={description}>
  <div class="blog-page">
    <header class="page-header">
      <h1>Blog</h1>
      <p class="page-description">
        Sharing thoughts and insights on media, policy, and technology.
      </p>
    </header>

    {sortedPosts.length === 0 ? (
      <div class="empty-state">
        <p>No blog posts yet.</p>
      </div>
    ) : (
      <div class="blog-content">
        <aside class="sidebar">
          <div class="search-section">
            <h3>Search</h3>
            <div class="search-box">
              <input
                type="text"
                id="searchInput"
                placeholder="Search posts..."
                autocomplete="off"
              />
              <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <circle cx="11" cy="11" r="8"></circle>
                <path d="m21 21-4.35-4.35"></path>
              </svg>
            </div>
          </div>

          <div class="tags-section">
            <h3>Popular Tags</h3>
            <div class="tag-cloud">
              <button class="tag-filter active" data-tag="all">
                All Posts ({sortedPosts.length})
              </button>
              {sortedTags.map(({ tag, count }) => (
                <button class="tag-filter" data-tag={tag}>
                  {tag} ({count})
                </button>
              ))}
            </div>
          </div>
        </aside>

        <section class="posts-section">
          <div id="postsContainer" class="posts-grid">
            {sortedPosts.map((post) => (
              <article
                class="post-card"
                data-title={(post.data.title_en || post.data.title).toLowerCase()}
                data-excerpt={(post.data.excerpt_en || post.data.excerpt).toLowerCase()}
                data-tags={(post.data.tags || []).join(',').toLowerCase()}
                data-tag-list={(post.data.tags || []).join(',')}
              >
                {post.data.image && (
                  <a href={`/blog/${post.id}`}>
                    <img
                      src={post.data.image}
                      alt={post.data.title_en || post.data.title}
                      class="post-image"
                    />
                  </a>
                )}

                <div class="post-content">
                  <div class="post-meta">
                    <span>{new Date(post.data.date).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}</span>
                    <span class="separator">·</span>
                    <span>{post.data.category}</span>
                  </div>

                  <h2>
                    <a href={`/blog/${post.id}`}>
                      {post.data.title_en || post.data.title}
                    </a>
                  </h2>

                  <p class="post-excerpt">
                    {post.data.excerpt_en || post.data.excerpt}
                  </p>

                  <div class="post-tags">
                    {post.data.tags.slice(0, 3).map((tag) => (
                      <span class="tag-badge">{tag}</span>
                    ))}
                  </div>

                  <a href={`/blog/${post.id}`} class="read-more">
                    Read more →
                  </a>
                </div>
              </article>
            ))}
          </div>
          <div id="noResults" class="no-results" style="display: none;">
            <p>No posts found matching your search.</p>
          </div>
        </section>
      </div>
    )}
  </div>
</BaseLayout>

<script>
  const searchInput = document.getElementById('searchInput');
  const postsContainer = document.getElementById('postsContainer');
  const postCards = document.querySelectorAll('.post-card');
  const noResults = document.getElementById('noResults');
  const tagFilters = document.querySelectorAll('.tag-filter');

  let currentTag = 'all';
  let currentSearch = '';

  function filterPosts() {
    let visibleCount = 0;

    postCards.forEach(card => {
      const title = card.getAttribute('data-title') || '';
      const excerpt = card.getAttribute('data-excerpt') || '';
      const tags = card.getAttribute('data-tags') || '';
      const tagList = card.getAttribute('data-tag-list') || '';

      const searchMatch = currentSearch === '' ||
        title.includes(currentSearch) ||
        excerpt.includes(currentSearch) ||
        tags.includes(currentSearch);

      const tagMatch = currentTag === 'all' ||
        tagList.split(',').includes(currentTag);

      if (searchMatch && tagMatch) {
        card.style.display = '';
        visibleCount++;
      } else {
        card.style.display = 'none';
      }
    });

    if (visibleCount === 0) {
      postsContainer.style.display = 'none';
      noResults.style.display = 'block';
    } else {
      postsContainer.style.display = 'grid';
      noResults.style.display = 'none';
    }
  }

  if (searchInput) {
    searchInput.addEventListener('input', (e) => {
      currentSearch = e.target.value.toLowerCase();
      filterPosts();
    });
  }

  tagFilters.forEach(button => {
    button.addEventListener('click', () => {
      tagFilters.forEach(btn => btn.classList.remove('active'));
      button.classList.add('active');
      currentTag = button.getAttribute('data-tag');
      filterPosts();
    });
  });
</script>

<style>
  .blog-page {
    max-width: var(--max-width);
    margin: 0 auto;
    padding: 0 2rem;
  }

  .page-header {
    margin-bottom: 2rem;
    padding-bottom: 1.5rem;
    border-bottom: 1px solid var(--color-border);
  }

  .page-header h1 {
    font-family: var(--font-heading);
    font-size: 2rem;
    font-weight: 700;
    color: var(--color-text);
    margin: 0 0 0.75rem 0;
  }

  .page-description {
    font-size: 1rem;
    color: var(--color-text-secondary);
    line-height: 1.6;
    margin: 0;
  }

  .empty-state {
    text-align: center;
    padding: 3rem 2rem;
    color: var(--color-text-secondary);
  }

  .blog-content {
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }

  .sidebar {
    padding: 1.25rem;
    background: var(--color-bg-secondary);
    border-radius: 0.5rem;
    border: 1px solid var(--color-border);
  }

  .sidebar h3 {
    font-family: var(--font-primary);
    font-size: 0.875rem;
    font-weight: 600;
    color: var(--color-text);
    margin: 0 0 0.75rem 0;
    text-transform: uppercase;
    letter-spacing: 0.025em;
  }

  .search-section {
    margin-bottom: 1.5rem;
  }

  .search-box {
    position: relative;
  }

  .search-box input {
    width: 100%;
    padding: 0.625rem 0.875rem;
    padding-right: 2.5rem;
    border: 1px solid var(--color-border);
    border-radius: 0.25rem;
    font-size: 0.875rem;
    font-family: inherit;
    transition: border-color 0.2s;
  }

  .search-box input:focus {
    outline: none;
    border-color: var(--color-accent);
  }

  .search-box svg {
    position: absolute;
    right: 0.75rem;
    top: 50%;
    transform: translateY(-50%);
    color: var(--color-text-secondary);
    pointer-events: none;
  }

  .tag-cloud {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .tag-filter {
    background: var(--color-bg);
    border: 1px solid var(--color-border);
    color: var(--color-text-secondary);
    padding: 0.375rem 0.75rem;
    border-radius: 0.25rem;
    font-size: 0.8125rem;
    font-weight: 500;
    cursor: pointer;
    transition: all 0.2s;
    font-family: inherit;
  }

  .tag-filter:hover {
    border-color: var(--color-accent);
    color: var(--color-text);
  }

  .tag-filter.active {
    background: var(--color-accent);
    border-color: var(--color-accent);
    color: white;
  }

  .posts-grid {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .post-card {
    border: 1px solid var(--color-border);
    border-radius: 0.5rem;
    overflow: hidden;
    display: flex;
    flex-direction: column;
    background: var(--color-bg);
    transition: border-color 0.2s;
  }

  .post-card:hover {
    border-color: var(--color-accent);
  }

  .post-image {
    width: 100%;
    height: 180px;
    object-fit: cover;
  }

  .post-content {
    padding: 1.25rem;
    display: flex;
    flex-direction: column;
    flex-grow: 1;
  }

  .post-meta {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    margin-bottom: 0.75rem;
    font-size: 0.8125rem;
    color: var(--color-text-secondary);
  }

  .separator {
    color: var(--color-border);
  }

  .post-card h2 {
    margin: 0 0 0.5rem 0;
  }

  .post-card h2 a {
    color: var(--color-text);
    text-decoration: none;
    font-family: var(--font-primary);
    font-size: 1.125rem;
    font-weight: 600;
    line-height: 1.4;
    transition: color 0.2s;
  }

  .post-card h2 a:hover {
    color: var(--color-accent);
  }

  .post-excerpt {
    color: var(--color-text-secondary);
    font-size: 0.875rem;
    line-height: 1.6;
    margin: 0 0 0.75rem 0;
    flex-grow: 1;
  }

  .post-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.375rem;
    margin-bottom: 0.75rem;
  }

  .tag-badge {
    background: var(--color-bg-secondary);
    padding: 0.25rem 0.5rem;
    border-radius: 0.25rem;
    font-size: 0.6875rem;
    color: var(--color-text-secondary);
  }

  .read-more {
    color: var(--color-link);
    text-decoration: none;
    font-weight: 500;
    font-size: 0.875rem;
  }

  .read-more:hover {
    text-decoration: underline;
  }

  .no-results {
    text-align: center;
    padding: 3rem 2rem;
    color: var(--color-text-secondary);
    background: var(--color-bg-secondary);
    border-radius: 0.5rem;
    border: 1px dashed var(--color-border);
  }

  @media (max-width: 768px) {
    .blog-page {
      padding: 0 1rem;
    }

    .page-header h1 {
      font-size: 1.75rem;
    }
  }

  @media (max-width: 640px) {
    .page-header h1 {
      font-size: 1.5rem;
    }
  }
</style>
