---
import BaseLayout from '../../layouts/BaseLayout.astro';
import BlogCard from '../../components/BlogCard.astro';
import Badge from '../../components/Badge.astro';
import blogData from '../../data/blog.json';

const posts = blogData.posts || [];

// 최신순 정렬
const sortedPosts = posts.sort((a, b) => new Date(b.date) - new Date(a.date));

// 태그 통계 계산
const tagStats = {};
posts.forEach(post => {
  if (post.tags && post.tags.length > 0) {
    post.tags.forEach(tag => {
      tagStats[tag] = (tagStats[tag] || 0) + 1;
    });
  }
});

// 태그를 사용 빈도순으로 정렬
const sortedTags = Object.entries(tagStats)
  .sort((a, b) => b[1] - a[1])
  .map(([tag, count]) => ({ tag, count }));
---

<BaseLayout title="Blog" description="생각과 인사이트를 공유합니다">
  <div class="blog-page">
    <header class="page-header">
      <h1 data-lang="en">Blog</h1>
      <h1 data-lang="ko">블로그</h1>
      <p class="page-description" data-lang="en">
        Sharing thoughts and insights on media, policy, and technology.
      </p>
      <p class="page-description" data-lang="ko">
        미디어, 정책, 기술에 관한 생각과 인사이트를 공유합니다.
      </p>
    </header>

    {sortedPosts.length === 0 ? (
      <div class="empty-state">
        <p data-lang="en">No blog posts yet.</p>
        <p data-lang="ko">아직 게시글이 없습니다.</p>
      </div>
    ) : (
      <div class="blog-content">
        <!-- Search & Filter Section -->
        <aside class="sidebar">
          <!-- Search Box -->
          <div class="search-section">
            <h3 data-lang="en">Search</h3>
            <h3 data-lang="ko">검색</h3>
            <div class="search-box">
              <input
                type="text"
                id="searchInput"
                placeholder="Search posts..."
                data-placeholder-en="Search posts..."
                data-placeholder-ko="게시글 검색..."
                autocomplete="off"
              />
              <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <circle cx="11" cy="11" r="8"></circle>
                <path d="m21 21-4.35-4.35"></path>
              </svg>
            </div>
          </div>

          <!-- Tag Cloud -->
          <div class="tags-section">
            <h3 data-lang="en">Popular Tags</h3>
            <h3 data-lang="ko">인기 태그</h3>
            <div class="tag-cloud">
              <button class="tag-filter active" data-tag="all">
                <span data-lang="en">All Posts ({sortedPosts.length})</span>
                <span data-lang="ko">전체 게시글 ({sortedPosts.length})</span>
              </button>
              {sortedTags.map(({ tag, count }) => (
                <button class="tag-filter" data-tag={tag}>
                  {tag} ({count})
                </button>
              ))}
            </div>
          </div>
        </aside>

        <!-- Posts Grid -->
        <section class="posts-section">
          <div id="postsContainer" class="posts-grid">
            {sortedPosts.map(post => (
              <div
                class="blog-card-wrapper"
                data-title={post.title.toLowerCase()}
                data-excerpt={(post.excerpt || '').toLowerCase()}
                data-tags={(post.tags || []).join(',').toLowerCase()}
                data-tag-list={(post.tags || []).join(',')}
              >
                <BlogCard
                  post={post}
                  showImage={true}
                  showExcerpt={true}
                  showTags={true}
                />
              </div>
            ))}
          </div>
          <div id="noResults" class="no-results" style="display: none;">
            <p data-lang="en">No posts found matching your search.</p>
            <p data-lang="ko">검색 결과가 없습니다.</p>
          </div>
        </section>
      </div>
    )}
  </div>
</BaseLayout>

<script>
  // Update placeholder based on language
  function updatePlaceholder() {
    const searchInput = document.getElementById('searchInput');
    if (searchInput) {
      const lang = document.documentElement.getAttribute('data-language') || 'en';
      const placeholder = lang === 'ko' ?
        searchInput.getAttribute('data-placeholder-ko') :
        searchInput.getAttribute('data-placeholder-en');
      searchInput.placeholder = placeholder || 'Search posts...';
    }
  }

  // 검색 기능
  const searchInput = document.getElementById('searchInput');
  const postsContainer = document.getElementById('postsContainer');
  const postCards = document.querySelectorAll('.blog-card-wrapper');
  const noResults = document.getElementById('noResults');
  const tagFilters = document.querySelectorAll('.tag-filter');

  let currentTag = 'all';
  let currentSearch = '';

  // Initialize placeholder
  updatePlaceholder();

  // Listen for language changes
  window.addEventListener('languagechange', updatePlaceholder);

  function filterPosts() {
    let visibleCount = 0;

    postCards.forEach(card => {
      const title = card.getAttribute('data-title') || '';
      const excerpt = card.getAttribute('data-excerpt') || '';
      const tags = card.getAttribute('data-tags') || '';
      const tagList = card.getAttribute('data-tag-list') || '';

      // 검색어 필터
      const searchMatch = currentSearch === '' ||
        title.includes(currentSearch) ||
        excerpt.includes(currentSearch) ||
        tags.includes(currentSearch);

      // 태그 필터
      const tagMatch = currentTag === 'all' ||
        tagList.split(',').includes(currentTag);

      if (searchMatch && tagMatch) {
        card.style.display = '';
        visibleCount++;
      } else {
        card.style.display = 'none';
      }
    });

    // 결과 없음 메시지 표시
    if (visibleCount === 0) {
      postsContainer.style.display = 'none';
      noResults.style.display = 'block';
    } else {
      postsContainer.style.display = 'grid';
      noResults.style.display = 'none';
    }
  }

  // 검색 입력
  if (searchInput) {
    searchInput.addEventListener('input', (e) => {
      currentSearch = e.target.value.toLowerCase();
      filterPosts();
    });
  }

  // 태그 필터 클릭
  tagFilters.forEach(button => {
    button.addEventListener('click', () => {
      // 모든 버튼에서 active 제거
      tagFilters.forEach(btn => btn.classList.remove('active'));

      // 클릭된 버튼에 active 추가
      button.classList.add('active');

      // 현재 태그 설정
      currentTag = button.getAttribute('data-tag');

      // 필터링 실행
      filterPosts();
    });
  });
</script>

<style>
  .blog-page {
    max-width: 1200px;
    margin: 0 auto;
    padding: 4rem 2rem;
  }

  .page-header {
    margin-bottom: 3rem;
    padding-bottom: 2rem;
    border-bottom: 2px solid #1e40af;
  }

  .page-header h1 {
    font-family: 'Paperozi', 'Merriweather', serif;
    font-size: 3rem;
    font-weight: 400;
    color: #1e40af;
    margin-bottom: 1rem;
  }

  .page-description {
    font-size: 1.125rem;
    color: #6b7280;
    line-height: 1.7;
  }

  .empty-state {
    text-align: center;
    padding: 4rem 2rem;
    color: #6b7280;
    font-size: 1.125rem;
  }

  /* Blog Content Layout */
  .blog-content {
    display: grid;
    grid-template-columns: 280px 1fr;
    gap: 3rem;
    align-items: start;
  }

  /* Sidebar */
  .sidebar {
    position: sticky;
    top: 100px;
  }

  .sidebar h3 {
    font-family: 'Paperozi', 'Merriweather', serif;
    font-size: 1.125rem;
    font-weight: 600;
    color: #1f2937;
    margin-bottom: 1rem;
  }

  /* Search Section */
  .search-section {
    margin-bottom: 2.5rem;
  }

  .search-box {
    position: relative;
  }

  .search-box input {
    width: 100%;
    padding: 0.75rem 1rem;
    padding-right: 2.5rem;
    border: 2px solid #e5e7eb;
    border-radius: 8px;
    font-size: 0.9375rem;
    transition: all 0.2s;
    font-family: inherit;
  }

  .search-box input:focus {
    outline: none;
    border-color: #2563eb;
    box-shadow: 0 0 0 3px rgba(37, 99, 235, 0.1);
  }

  .search-box svg {
    position: absolute;
    right: 0.75rem;
    top: 50%;
    transform: translateY(-50%);
    color: #9ca3af;
    pointer-events: none;
  }

  /* Tags Section */
  .tags-section {
    margin-bottom: 2rem;
  }

  .tag-cloud {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .tag-filter {
    background: #f3f4f6;
    border: 2px solid transparent;
    color: #4b5563;
    padding: 0.625rem 1rem;
    border-radius: 6px;
    font-size: 0.875rem;
    font-weight: 500;
    cursor: pointer;
    transition: all 0.2s;
    text-align: left;
    font-family: inherit;
  }

  .tag-filter:hover {
    background: #e5e7eb;
    color: #1f2937;
  }

  .tag-filter.active {
    background: #dbeafe;
    border-color: #2563eb;
    color: #1e40af;
    font-weight: 600;
  }

  /* Posts Section */
  .posts-section {
    min-width: 0;
  }

  .posts-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 2rem;
  }

  .blog-card-wrapper {
    display: flex;
  }

  .no-results {
    text-align: center;
    padding: 4rem 2rem;
    color: #6b7280;
    font-size: 1.125rem;
    background: #f9fafb;
    border-radius: 12px;
    border: 2px dashed #e5e7eb;
  }

  @media (max-width: 968px) {
    .blog-content {
      grid-template-columns: 1fr;
    }

    .sidebar {
      position: static;
      background: #f9fafb;
      padding: 1.5rem;
      border-radius: 12px;
      margin-bottom: 2rem;
    }

    .search-section {
      margin-bottom: 1.5rem;
    }

    .tags-section {
      margin-bottom: 0;
    }

    .tag-cloud {
      flex-direction: row;
      flex-wrap: wrap;
    }

    .tag-filter {
      flex: 0 0 auto;
    }
  }

  @media (max-width: 768px) {
    .blog-page {
      padding: 2rem 1rem;
    }

    .page-header h1 {
      font-size: 2rem;
    }

    .posts-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
