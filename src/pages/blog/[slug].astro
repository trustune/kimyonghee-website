---
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';
import SocialShare from '../../components/SocialShare.astro';

export async function getStaticPaths() {
  const blogEntries = await getCollection('blog');
  return blogEntries.map(entry => ({
    params: { slug: entry.slug },
    props: { entry },
  }));
}

const { entry } = Astro.props;
const { Content } = await render(entry);
const {
  title,
  title_en,
  excerpt,
  excerpt_en,
  date,
  category,
  tags,
  image,
  author,
  enableShare,
} = entry.data;

const formattedDate = new Date(date).toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric'
});

const currentUrl = `https://kimyonghee.com/writing/${entry.slug}`;
const fullImageUrl = image ? `https://kimyonghee.com${image}` : '';
---

<BaseLayout title={`${title_en || title} | Yonghee Kim`} description={excerpt_en || excerpt} image={fullImageUrl} url={currentUrl}>
  <article class="blog-post">
    <header class="post-header">
      <div class="back-link-row">
        <a href="/writing" class="back-link">
          &larr; Back to Writing
        </a>
      </div>

      {image && (
        <img
          src={image}
          alt={title_en || title}
          class="hero-image"
        />
      )}

      <div class="post-meta">
        <span>{formattedDate}</span>
        <span>&middot;</span>
        <span>{category}</span>
        <span>&middot;</span>
        <span>by {author}</span>
      </div>

      <h1 class="post-title">
        {title_en || title}
      </h1>

      <div class="post-tags">
        {tags.map((tag) => (
          <span class="tag-badge">
            #{tag}
          </span>
        ))}
      </div>
    </header>

    <div class="prose">
      <Content />
    </div>

    {enableShare && (
      <div class="share-section">
        <SocialShare
          title={title_en || title}
          url={currentUrl}
          excerpt={excerpt_en || excerpt}
          image={fullImageUrl}
        />
      </div>
    )}

    <footer class="post-footer">
      <a href="/writing" class="back-link">
        &larr; Back to all posts
      </a>
    </footer>
  </article>
</BaseLayout>

<style>
  .blog-post {
    max-width: 800px;
    margin: 0 auto;
    padding: var(--space-8) var(--space-4);
  }

  .post-header {
    margin-bottom: var(--space-12);
  }

  .back-link-row {
    margin-bottom: var(--space-6);
  }

  .back-link {
    color: var(--color-accent);
    text-decoration: none;
    font-size: 0.95rem;
    transition: color var(--transition-fast);
  }

  .back-link:hover {
    color: var(--color-accent-hover);
  }

  .hero-image {
    width: 100%;
    height: 400px;
    object-fit: cover;
    border-radius: var(--border-radius);
    margin-bottom: var(--space-8);
  }

  .post-meta {
    display: flex;
    gap: var(--space-4);
    margin-bottom: var(--space-4);
    font-size: 0.9rem;
    color: var(--color-text-secondary);
  }

  .post-title {
    font-family: var(--font-serif);
    font-size: var(--step-4);
    font-weight: 400;
    line-height: 1.2;
    margin-bottom: var(--space-6);
    color: var(--color-text);
  }

  .post-tags {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-2);
    margin-bottom: var(--space-8);
  }

  .tag-badge {
    background: var(--color-surface);
    padding: var(--space-1) var(--space-3);
    border-radius: var(--border-radius);
    font-size: 0.9rem;
    color: var(--color-text-secondary);
  }

  .prose {
    line-height: 1.8;
    color: var(--color-text);
  }

  .share-section {
    margin-top: var(--space-16);
    padding-top: var(--space-8);
    border-top: 1px solid var(--color-border);
  }

  .post-footer {
    margin-top: var(--space-16);
    padding-top: var(--space-8);
    border-top: 1px solid var(--color-border);
    text-align: center;
  }

  @media (max-width: 768px) {
    .blog-post {
      padding: var(--space-6) var(--space-4);
    }

    .post-title {
      font-size: var(--step-3);
    }

    .hero-image {
      height: 250px;
    }
  }
</style>
