---
import BaseLayout from '../layouts/BaseLayout.astro';
import awards from '../data/awards.json';
---

<BaseLayout title="About" description="About Yonghee Kim">
  <div class="about-page">
    <!-- Header -->
    <header class="page-header">
      <div class="header-content">
        <div class="profile-image-container">
          <img src="/images/profile.jpg" alt="Yonghee Kim" class="profile-image" />
        </div>
        <div class="header-text">
          <h1>About</h1>
          <p class="subtitle">Yonghee Kim, Ph.D.</p>
        </div>
      </div>
    </header>

    <!-- Current Position -->
    <section class="section">
      <h2>Current Position</h2>
      <div class="position-list">
        <div class="position-item">
          <h3>Professor, Department of Business Administration, Sunmoon University</h3>
          <p class="period">2025.3 - Present</p>
        </div>
        <div class="position-item">
          <h3>Director, Daeyeon Industrial Policy Institute</h3>
        </div>
        <div class="position-item">
          <h3>Research Fellow, OpenRoute Inc.</h3>
        </div>
      </div>
    </section>

    <!-- Research Interests -->
    <section class="section">
      <h2>Research Interests</h2>
      <div class="interests">
        <div class="interest-category">
          <h3>Primary</h3>
          <ul>
            <li>Media & ICT Policy and Management</li>
            <li>Government Policy Consulting</li>
            <li>Media ESG</li>
          </ul>
        </div>
        <div class="interest-category">
          <h3>Methods</h3>
          <ul>
            <li>Econometrics</li>
            <li>Big Data Analysis</li>
            <li>Data Envelopment Analysis</li>
            <li>Structural Equation Modeling</li>
          </ul>
        </div>
        <div class="interest-category">
          <h3>Topics</h3>
          <ul>
            <li>Media Industry Policy</li>
            <li>Media ESG</li>
            <li>ICT & Media Industry Efficiency</li>
            <li>OTT & Broadcasting Policy</li>
          </ul>
        </div>
      </div>
    </section>

    <!-- Education -->
    <section class="section">
      <h2>Education</h2>
      <div class="education-list">
        <div class="education-item">
          <h3>Ph.D. in Business Administration (OMIS)</h3>
          <p class="institution">Soongsil University</p>
          <p class="period">2013 - 2016</p>
        </div>
        <div class="education-item">
          <h3>M.S. in Business Administration (OMIS)</h3>
          <p class="institution">Soongsil University</p>
          <p class="period">2010 - 2012</p>
        </div>
        <div class="education-item">
          <h3>B.A. in Economics</h3>
          <p class="institution">Soongsil University</p>
          <p class="period">2000 - 2010</p>
        </div>
      </div>
    </section>

    <!-- Professional Experience -->
    <section class="section">
      <h2>Professional Experience</h2>
      <div class="experience-list">
        <div class="experience-item">
          <h3>Adjunct Professor</h3>
          <p class="institution">Graduate School of Media & Communication, Kyung Hee University</p>
          <p class="period">2023.9 - 2025.2</p>
        </div>
        <div class="experience-item">
          <h3>OTT Professor</h3>
          <p class="institution">Dongguk University</p>
          <p class="period">2022.7 - 2023.6</p>
        </div>
        <div class="experience-item">
          <h3>Adjunct Professor</h3>
          <p class="institution">KAIST</p>
          <p class="period">2022.7 - 2023.6</p>
        </div>
        <div class="experience-item">
          <h3>Assistant Professor</h3>
          <p class="institution">Soongsil University</p>
          <p class="period">2017.4 - 2021.2</p>
        </div>
        <div class="experience-item">
          <h3>Policy Manager (SO & PP)</h3>
          <p class="institution">Korea Cable TV & Telecommunications Association</p>
        </div>
      </div>
    </section>

    <!-- Awards & Honors -->
    <section class="section">
      <h2>Awards & Honors</h2>
      <div class="awards-list">
        {awards.awards.sort((a, b) => new Date(b.date) - new Date(a.date)).slice(0, 10).map(award => (
          <div class="award-item">
            <span class="award-title">{award.title}</span>
            {award.subtitle && <span class="award-subtitle"> &mdash; {award.subtitle}</span>}
            <span class="award-meta">
              {award.organization}, {new Date(award.date).getFullYear()}
            </span>
          </div>
        ))}
      </div>
    </section>

    <!-- Certifications -->
    <section class="section">
      <h2>Professional Certifications</h2>
      <div class="cert-list">
        <div class="cert-item">
          <span class="cert-name">Associate Certified Sustainability Assurance</span>
          <span class="cert-meta">Accountability, 2023</span>
        </div>
        <div class="cert-item">
          <span class="cert-name">Computer Specialist in Spreadsheet & Database</span>
          <span class="cert-meta">Korea Chamber of Commerce and Industry, 2008</span>
        </div>
        <div class="cert-item">
          <span class="cert-name">Information Equipment Operation Technician</span>
          <span class="cert-meta">Human Resources Development Service of Korea, 2008</span>
        </div>
      </div>
    </section>

    <!-- Contact -->
    <section class="section">
      <h2>Contact</h2>
      <div class="contact-info">
        <p><strong>Email:</strong> <a href="mailto:yhkim1981@sunmoon.ac.kr">yhkim1981@sunmoon.ac.kr</a></p>
        <p><strong>Office:</strong> Department of Business Administration, Sunmoon University</p>
        <p><strong>Address:</strong> 70 Sunmun-ro 221beon-gil, Tangjeong-myeon, Asan-si, Chungnam, South Korea</p>
      </div>
      <div class="contact-links">
        <a href="https://github.com/yhkim1981-svg" target="_blank">GitHub</a>
        <a href="https://scholar.google.com/citations?user=semkeskAAAAJ" target="_blank">Google Scholar</a>
        <a href="https://orcid.org/0000-0002-5643-2748" target="_blank">ORCID</a>
      </div>
    </section>
  </div>
</BaseLayout>

<style>
  .about-page {
    max-width: var(--container-max);
    margin: 0 auto;
    padding: var(--space-16) var(--space-8);
  }

  /* Header */
  .page-header {
    margin-bottom: var(--space-12);
    padding-bottom: var(--space-12);
    border-bottom: 1px solid var(--color-border-light);
  }

  .header-content {
    display: flex;
    align-items: center;
    gap: var(--space-8);
  }

  .profile-image-container {
    flex-shrink: 0;
  }

  .profile-image {
    width: 180px;
    height: 180px;
    border-radius: var(--border-radius);
    object-fit: cover;
    border: 2px solid var(--color-border);
  }

  .header-text {
    flex: 1;
  }

  .page-header h1 {
    font-family: var(--font-serif);
    font-size: var(--step-3);
    font-weight: 400;
    color: var(--color-text);
    margin-bottom: var(--space-2);
  }

  .subtitle {
    font-size: var(--step-1);
    color: var(--color-text-secondary);
    font-weight: 300;
  }

  /* Sections */
  .section {
    margin-bottom: var(--space-12);
    padding-bottom: var(--space-12);
    border-bottom: 1px solid var(--color-border-light);
  }

  .section:last-child {
    border-bottom: none;
    padding-bottom: 0;
  }

  .section h2 {
    font-family: var(--font-serif);
    font-size: var(--step-2);
    font-weight: 400;
    color: var(--color-text);
    margin-bottom: var(--space-8);
  }

  /* Position */
  .position-list {
    display: flex;
    flex-direction: column;
    gap: var(--space-6);
  }

  .position-item h3 {
    font-size: var(--step-0);
    color: var(--color-text);
    font-weight: 600;
    margin-bottom: var(--space-1);
  }

  .period {
    color: var(--color-text-muted);
    font-size: 0.875rem;
  }

  /* Research Interests */
  .interests {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: var(--space-8);
  }

  .interest-category h3 {
    font-size: 1rem;
    font-weight: 600;
    color: var(--color-accent);
    margin-bottom: var(--space-4);
  }

  .interest-category ul {
    list-style: none;
    padding: 0;
  }

  .interest-category li {
    padding: var(--space-2) 0;
    color: var(--color-text-secondary);
    border-bottom: 1px solid var(--color-border-light);
    font-size: 0.9375rem;
  }

  .interest-category li:last-child {
    border-bottom: none;
  }

  /* Education */
  .education-list,
  .experience-list {
    display: flex;
    flex-direction: column;
    gap: var(--space-8);
  }

  .education-item h3,
  .experience-item h3 {
    font-size: var(--step-0);
    color: var(--color-text);
    font-weight: 600;
    margin-bottom: var(--space-1);
  }

  .institution {
    color: var(--color-accent);
    font-weight: 500;
    margin-bottom: var(--space-1);
    font-size: 0.9375rem;
  }

  .thesis {
    color: var(--color-text-muted);
    font-size: 0.875rem;
    font-style: italic;
    margin-top: var(--space-2);
  }

  /* Awards - simple list */
  .awards-list {
    display: flex;
    flex-direction: column;
    gap: var(--space-4);
  }

  .award-item {
    padding-bottom: var(--space-4);
    border-bottom: 1px solid var(--color-border-light);
    line-height: 1.6;
  }

  .award-item:last-child {
    border-bottom: none;
    padding-bottom: 0;
  }

  .award-title {
    font-weight: 600;
    color: var(--color-text);
    font-size: 0.9375rem;
  }

  .award-subtitle {
    color: var(--color-text-secondary);
    font-size: 0.9375rem;
  }

  .award-meta {
    display: block;
    color: var(--color-text-muted);
    font-size: 0.8125rem;
    margin-top: var(--space-1);
  }

  /* Certifications */
  .cert-list {
    display: flex;
    flex-direction: column;
    gap: var(--space-4);
  }

  .cert-item {
    padding-bottom: var(--space-4);
    border-bottom: 1px solid var(--color-border-light);
  }

  .cert-item:last-child {
    border-bottom: none;
    padding-bottom: 0;
  }

  .cert-name {
    display: block;
    font-weight: 600;
    color: var(--color-text);
    font-size: 0.9375rem;
  }

  .cert-meta {
    display: block;
    color: var(--color-text-muted);
    font-size: 0.8125rem;
    margin-top: var(--space-1);
  }

  /* Contact */
  .contact-info {
    margin-bottom: var(--space-6);
  }

  .contact-info p {
    margin-bottom: var(--space-2);
    color: var(--color-text-secondary);
    font-size: 0.9375rem;
  }

  .contact-info a {
    color: var(--color-accent);
    text-decoration: none;
    transition: color var(--transition-fast);
  }

  .contact-info a:hover {
    color: var(--color-accent-hover);
    text-decoration: underline;
  }

  .contact-links {
    display: flex;
    gap: var(--space-6);
    flex-wrap: wrap;
  }

  .contact-links a {
    color: var(--color-accent);
    text-decoration: none;
    font-size: 0.9375rem;
    font-weight: 500;
    transition: color var(--transition-fast);
  }

  .contact-links a:hover {
    color: var(--color-accent-hover);
    text-decoration: underline;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .about-page {
      padding: var(--space-8) var(--space-4);
    }

    .header-content {
      flex-direction: column;
      text-align: center;
      gap: var(--space-6);
    }

    .profile-image {
      width: 140px;
      height: 140px;
    }

    .interests {
      grid-template-columns: 1fr;
    }
  }
</style>
