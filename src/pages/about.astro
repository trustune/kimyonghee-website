---
import BaseLayout from '../layouts/BaseLayout.astro';
import awards from '../data/awards.json';
---

<BaseLayout title="About" description="Yonghee Kim - Media Policy & Management Expert">
  <div class="about-page">
    <header class="page-header">
      <div class="header-content">
        <div class="profile-image-container">
          <img src="/images/profile.jpg" alt="Yonghee Kim" class="profile-image" />
        </div>
        <div class="header-text">
          <h1>About</h1>
          <p class="subtitle">Yonghee Kim, Ph.D.</p>
        </div>
      </div>
    </header>

    <section class="section">
      <h2>Current Position</h2>
      <div class="position-list">
        <div class="position-item">
          <h3>Assistant Professor, Department of Business Administration, Sunmoon University</h3>
          <p class="period">2025.3 - Present</p>
        </div>
        <div class="position-item">
          <h3>Director, Daeyeon Industrial Policy Institute</h3>
        </div>
        <div class="position-item">
          <h3>Research Fellow, OpenRoute Inc.</h3>
        </div>
      </div>
    </section>

    <section class="section">
      <h2>Research Interests</h2>
      <div class="interests">
        <div class="interest-category">
          <h3>Primary</h3>
          <ul>
            <li>Media & ICT Policy and Management</li>
            <li>Government Policy Consulting</li>
            <li>Media ESG</li>
          </ul>
        </div>
        <div class="interest-category">
          <h3>Methods</h3>
          <ul>
            <li>Econometrics</li>
            <li>Big Data Analysis</li>
            <li>Data Envelopment Analysis</li>
            <li>Structural Equation Modeling</li>
          </ul>
        </div>
        <div class="interest-category">
          <h3>Topics</h3>
          <ul>
            <li>Media Industry Policy</li>
            <li>Media ESG</li>
            <li>ICT & Media Industry Efficiency</li>
            <li>OTT & Broadcasting Policy</li>
          </ul>
        </div>
      </div>
    </section>

    <section class="section">
      <h2>Education</h2>
      <div class="education-list">
        <div class="education-item">
          <h3>Ph.D. in Business Administration (OMIS)</h3>
          <p class="institution">Soongsil University</p>
          <p class="period">2013 - 2016</p>
          <p class="thesis">A Study on the Acceptance of IoT-based Smart Home Services: Focusing on Contingent Valuation Method and Value-based Acceptance Model</p>
        </div>
        <div class="education-item">
          <h3>M.S. in Business Administration (OMIS)</h3>
          <p class="institution">Soongsil University</p>
          <p class="period">2010 - 2012</p>
          <p class="thesis">International Comparison of Productivity and Efficiency of Pay-TV Operators</p>
        </div>
        <div class="education-item">
          <h3>B.A. in Economics</h3>
          <p class="institution">Soongsil University</p>
          <p class="period">2000 - 2010</p>
        </div>
      </div>
    </section>

    <section class="section">
      <h2>Professional Experience</h2>
      <div class="experience-list">
        <div class="experience-item">
          <h3>Adjunct Professor</h3>
          <p class="institution">Graduate School of Media & Communication, Kyung Hee University</p>
          <p class="period">2023.9 - 2025.2</p>
        </div>
        <div class="experience-item">
          <h3>OTT Professor</h3>
          <p class="institution">Dongguk University</p>
          <p class="period">2022.7 - 2023.6</p>
        </div>
        <div class="experience-item">
          <h3>Adjunct Professor</h3>
          <p class="institution">KAIST</p>
          <p class="period">2022.7 - 2023.6</p>
        </div>
        <div class="experience-item">
          <h3>Assistant Professor</h3>
          <p class="institution">Soongsil University</p>
          <p class="period">2017.4 - 2021.2</p>
        </div>
        <div class="experience-item">
          <h3>Policy Manager (SO & PP)</h3>
          <p class="institution">Korea Cable TV & Telecommunications Association</p>
        </div>
      </div>
    </section>

    <section class="section">
      <h2>Awards & Honors</h2>
      <div class="awards-list">
        {awards.awards.sort((a, b) => new Date(b.date) - new Date(a.date)).slice(0, 10).map(award => (
          <div class="award-item">
            <div class="award-header">
              <h3>{award.title}</h3>
              {award.subtitle && <p class="award-subtitle">{award.subtitle}</p>}
            </div>
            <p class="award-org">{award.organization}</p>
            <p class="award-date">{new Date(award.date).getFullYear()}</p>
            {award.description && <p class="award-desc">{award.description}</p>}
          </div>
        ))}
      </div>
    </section>

    <section class="section">
      <h2>Professional Certifications</h2>
      <div class="cert-list">
        <div class="cert-item">
          <h3>Associate Certified Sustainability Assurance</h3>
          <p>Accountability, 2023</p>
        </div>
        <div class="cert-item">
          <h3>Computer Specialist in Spreadsheet & Database</h3>
          <p>Korea Chamber of Commerce and Industry, 2008</p>
        </div>
        <div class="cert-item">
          <h3>Information Equipment Operation Technician</h3>
          <p>Human Resources Development Service of Korea, 2008</p>
        </div>
      </div>
    </section>

    <section class="section contact-section">
      <h2>Contact</h2>
      <div class="contact-info">
        <p><strong>Email:</strong> <a href="mailto:yhkim1981@sunmoon.ac.kr">yhkim1981@sunmoon.ac.kr</a></p>
        <p><strong>Office:</strong> Department of Business Administration, Sunmoon University</p>
        <p><strong>Address:</strong> 70 Sunmun-ro 221beon-gil, Tangjeong-myeon, Asan-si, Chungnam, South Korea</p>
      </div>
      <div class="contact-links">
        <a href="https://github.com/yhkim1981-svg" target="_blank" class="contact-link">GitHub</a>
        <a href="https://scholar.google.com/citations?user=semkeskAAAAJ" target="_blank" class="contact-link">Google Scholar</a>
        <a href="https://orcid.org/0000-0002-5643-2748" target="_blank" class="contact-link">ORCID</a>
      </div>
    </section>
  </div>
</BaseLayout>

<style>
  .about-page {
    max-width: var(--max-width);
    margin: 0 auto;
    padding: 0 2rem;
  }

  .page-header {
    margin-bottom: 3rem;
    padding-bottom: 2rem;
    border-bottom: 1px solid var(--color-border);
  }

  .header-content {
    display: flex;
    align-items: center;
    gap: 2rem;
  }

  .profile-image-container {
    flex-shrink: 0;
  }

  .profile-image {
    width: 150px;
    height: 150px;
    border-radius: 50%;
    object-fit: cover;
    border: 3px solid var(--color-border);
  }

  .header-text {
    flex: 1;
  }

  .page-header h1 {
    font-family: var(--font-heading);
    font-size: 2rem;
    color: var(--color-text);
    margin: 0 0 0.5rem 0;
  }

  .subtitle {
    font-size: 1.125rem;
    color: var(--color-text-secondary);
    margin: 0;
  }

  .section {
    margin-bottom: 2.5rem;
  }

  .section h2 {
    font-family: var(--font-heading);
    font-size: 1.5rem;
    color: var(--color-text);
    margin: 0 0 1.5rem 0;
    padding-bottom: 0.5rem;
    border-bottom: 1px solid var(--color-border);
  }

  .position-list,
  .education-list,
  .experience-list {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .position-item h3,
  .education-item h3,
  .experience-item h3 {
    font-family: var(--font-primary);
    font-size: 1rem;
    font-weight: 600;
    color: var(--color-text);
    margin: 0 0 0.25rem 0;
  }

  .period {
    color: var(--color-text-secondary);
    font-size: 0.875rem;
    margin: 0;
  }

  .institution {
    color: var(--color-link);
    font-weight: 500;
    margin: 0 0 0.25rem 0;
  }

  .thesis {
    color: var(--color-text-secondary);
    font-size: 0.875rem;
    font-style: italic;
    margin: 0.5rem 0 0 0;
  }

  .interests {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 1.5rem;
  }

  .interest-category h3 {
    font-family: var(--font-primary);
    font-size: 1rem;
    font-weight: 600;
    color: var(--color-accent);
    margin: 0 0 0.75rem 0;
  }

  .interest-category ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .interest-category li {
    padding: 0.5rem 0;
    color: var(--color-text-secondary);
    border-bottom: 1px solid var(--color-bg-secondary);
    font-size: 0.9375rem;
  }

  .awards-list {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .award-item {
    padding: 1rem;
    border: 1px solid var(--color-border);
    border-radius: 0.5rem;
  }

  .award-header h3 {
    font-family: var(--font-primary);
    font-size: 1rem;
    font-weight: 600;
    color: var(--color-text);
    margin: 0 0 0.25rem 0;
  }

  .award-subtitle {
    color: var(--color-text-secondary);
    font-size: 0.875rem;
    margin: 0 0 0.5rem 0;
  }

  .award-org {
    color: var(--color-link);
    font-weight: 500;
    margin: 0 0 0.25rem 0;
    font-size: 0.875rem;
  }

  .award-date {
    color: var(--color-text-secondary);
    font-size: 0.8125rem;
    margin: 0;
  }

  .award-desc {
    color: var(--color-text-secondary);
    font-size: 0.875rem;
    margin: 0.5rem 0 0 0;
  }

  .cert-list {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .cert-item {
    padding: 1rem;
    background: var(--color-bg-secondary);
    border-left: 3px solid var(--color-accent);
    border-radius: 0.25rem;
  }

  .cert-item h3 {
    font-family: var(--font-primary);
    font-size: 0.9375rem;
    font-weight: 600;
    color: var(--color-text);
    margin: 0 0 0.25rem 0;
  }

  .cert-item p {
    color: var(--color-text-secondary);
    font-size: 0.8125rem;
    margin: 0;
  }

  .contact-section {
    background: var(--color-bg-secondary);
    padding: 1.5rem;
    border-radius: 0.5rem;
  }

  .contact-section h2 {
    border-bottom: none;
    margin-bottom: 1rem;
  }

  .contact-info {
    margin-bottom: 1rem;
  }

  .contact-info p {
    margin: 0 0 0.5rem 0;
    color: var(--color-text-secondary);
    font-size: 0.9375rem;
  }

  .contact-info a {
    color: var(--color-link);
    text-decoration: none;
  }

  .contact-info a:hover {
    text-decoration: underline;
  }

  .contact-links {
    display: flex;
    gap: 0.75rem;
    flex-wrap: wrap;
  }

  .contact-link {
    padding: 0.5rem 1rem;
    background: var(--color-accent);
    color: white;
    text-decoration: none;
    border-radius: 0.25rem;
    font-weight: 500;
    font-size: 0.875rem;
    transition: background 0.2s;
  }

  .contact-link:hover {
    background: var(--color-link-hover);
  }

  @media (max-width: 768px) {
    .about-page {
      padding: 0 1rem;
    }

    .header-content {
      flex-direction: column;
      text-align: center;
      gap: 1.5rem;
    }

    .profile-image {
      width: 120px;
      height: 120px;
    }

    .page-header h1 {
      font-size: 1.75rem;
    }

    .interests {
      grid-template-columns: 1fr;
    }
  }
</style>
