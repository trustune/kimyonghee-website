---
import BaseLayout from '../layouts/BaseLayout.astro';
import publications from '../data/publications.json';
import books from '../data/books.json';
import media from '../data/media.json';

const recentPubs = publications.publications
  .sort((a, b) => b.year - a.year)
  .slice(0, 3);
---

<BaseLayout title="Home">
  <div class="homepage">
    <header class="hero">
      <h1 class="name">김용희 (YONGHEE KIM)</h1>
      <p class="subtitle">Professor of Business Administration | Media Policy & Management Expert</p>
    </header>

    <section class="bio">
      <p>
        I'm a business administration professor and data scientist specializing in media policy, OTT service markets, and ICT efficiency analysis. My research combines econometric methods with big data analytics to inform policy decisions in Korea's rapidly evolving digital media landscape. You can find my <a href="/research/publications">academic research here</a>.
      </p>
      <p>
        I've published seven papers in SSCI-indexed journals, including work on cord-cutting behavior, media regulation, and ESG practices in media industries. My research has been cited by policymakers and has contributed to regulatory frameworks in Korean broadcasting and telecommunications. I regularly contribute policy analysis and expert commentary to <a href="https://www.etnews.com/20251103000041" target="_blank">The Electronic Times (etnews)</a>, Korea's leading technology and media publication.
      </p>
      <p>
        Currently, I serve as an associate professor at the <a href="https://mgt.sunmoon.ac.kr/mgt/ad/pp/profsrintrcnPage.do?profsrSe=A&mi=41267" target="_blank">Department of Business Administration at Sunmoon University</a>, where I teach courses on digital business strategy and data analytics. I also direct the Daeyeon Industrial Policy Institute, focusing on evidence-based policy research for Korea's media and ICT sectors.
      </p>
      <p>
        In recognition of my contributions to media policy, I've received commendations from both the Korea Communications Commission and the Ministry of Science and ICT. I'm also a cofounder of <a href="https://www.openroute.kr/" target="_blank">OpenRoute</a>, a research consultancy that bridges academic research and industry practice in digital transformation.
      </p>
    </section>

    <section class="section">
      <div class="section-header">
        <h2 data-lang="en">Recent Research</h2>
        <h2 data-lang="ko">최근 연구</h2>
        <a href="/research/publications" class="section-link">
          <span data-lang="en">View All Research →</span>
          <span data-lang="ko">전체 연구 보기 →</span>
        </a>
      </div>
      
      <div class="publication-list">
        {recentPubs.map(pub => (
          <article class="publication-item">
            <h3 class="pub-title">{pub.title}</h3>
            <div class="pub-meta">
              <span class="pub-authors">{pub.authors.join(', ')}</span>
              <span class="separator">•</span>
              <span class="pub-journal">{pub.journal}</span>
              <span class="separator">•</span>
              <span class="pub-year">{pub.year}</span>
              {pub.impact_factor && (
                <>
                  <span class="separator">•</span>
                  <span class="pub-if">IF {pub.impact_factor}</span>
                </>
              )}
            </div>
          </article>
        ))}
      </div>
    </section>

    <section class="section">
      <div class="section-header">
        <h2 data-lang="en">Books</h2>
        <h2 data-lang="ko">저서</h2>
      </div>
      
      <div class="book-list">
        {books.books.filter(b => b.type === 'main').map(book => (
          <article class="book-item">
            <h3 class="book-title">{book.title}</h3>
            <div class="book-meta">
              <span class="book-authors">{Array.isArray(book.authors) ? book.authors.join(', ') : book.authors}</span>
              <span class="separator">•</span>
              <span class="book-year">{book.year}</span>
              {book.isbn && (
                <>
                  <span class="separator">•</span>
                  <span class="book-isbn">ISBN {book.isbn}</span>
                </>
              )}
            </div>
          </article>
        ))}
      </div>
    </section>

    <section class="section">
      <div class="section-header">
        <h2>Media Articles</h2>
        <a href="/media" class="section-link">View All →</a>
      </div>
      
      <div class="article-list">
        {media.articles.slice(0, 3).map(article => (
          <article class="article-item">
            <a href={article.url} target="_blank" class="article-link">
              <div class="article-meta">
                <span class="article-outlet">{article.outlet}</span>
                <span class="separator">•</span>
                <span class="article-date">{article.date}</span>
              </div>
              <h3 class="article-title">{article.title}</h3>
            </a>
          </article>
        ))}
      </div>
    </section>

    <section class="section">
      <div class="section-header">
        <h2>Links</h2>
      </div>

      <nav class="links">
        <a href="mailto:yhkim1981@sunmoon.ac.kr" class="link-item">
          <span class="link-title">Email</span>
          <span class="link-arrow">→</span>
        </a>
        <a href="https://github.com/yhkim1981-svg" class="link-item">
          <span class="link-title">GitHub</span>
          <span class="link-arrow">→</span>
        </a>
        <a href="https://scholar.google.com/citations?user=semkeskAAAAJ" class="link-item">
          <span class="link-title">Google Scholar</span>
          <span class="link-arrow">→</span>
        </a>
      </nav>
    </section>
  </div>
</BaseLayout>

<style>
  .homepage { max-width: 1200px; margin: 0 auto; padding: 4rem 2rem; }
  .hero { margin-bottom: 4rem; }
  .name { font-family: 'Paperozi', 'Merriweather', serif; font-size: 2.5rem; font-weight: 300; letter-spacing: -0.02em; color: #1e40af; margin-bottom: 0.5rem; }
  .subtitle { font-size: 1.125rem; color: #6b7280; margin: 0; }
  .bio { margin-bottom: 4rem; padding-bottom: 3rem; border-bottom: 1px solid #e5e7eb; font-size: 1.125rem; line-height: 1.7; }
  .bio p { margin-bottom: 1.5rem; }
  .bio a { color: #2563eb; text-decoration: underline; text-underline-offset: 0.2em; }
  .section { margin-bottom: 4rem; padding-bottom: 3rem; border-bottom: 1px solid #e5e7eb; }
  .section:last-child { border-bottom: none; }
  .section-header { display: flex; justify-content: space-between; align-items: baseline; margin-bottom: 2rem; }
  .section-header h2 { font-family: 'Paperozi', 'Merriweather', serif; font-size: 1.875rem; font-weight: 400; margin: 0; }
  .section-link { font-size: 0.875rem; color: #6b7280; text-decoration: none; text-transform: uppercase; letter-spacing: 0.05em; }
  .section-link:hover { color: #2563eb; }
  .publication-item, .book-item { margin-bottom: 2rem; }
  .pub-title, .book-title { font-family: 'Paperozi', 'Inter', sans-serif; font-size: 1.125rem; font-weight: 500; margin-bottom: 0.5rem; line-height: 1.4; }
  .pub-meta, .book-meta { font-size: 0.875rem; color: #6b7280; display: flex; flex-wrap: wrap; gap: 0.5rem; }
  .separator { color: #d1d5db; }
  .pub-if { font-weight: 600; color: #059669; }
  .article-list { display: flex; flex-direction: column; gap: 1rem; }
  .article-item { padding: 1.25rem; border: 1px solid #e5e7eb; border-radius: 0.5rem; transition: all 0.2s; }
  .article-item:hover { border-color: #2563eb; background: #eff6ff; }
  .article-link { text-decoration: none; display: block; }
  .article-meta { font-size: 0.875rem; color: #6b7280; margin-bottom: 0.5rem; }
  .article-outlet { font-weight: 600; color: #2563eb; }
  .article-title { font-family: 'Paperozi', 'Inter', sans-serif; font-size: 1.125rem; color: #1f2937; font-weight: 500; line-height: 1.4; }
  .article-link:hover .article-title { color: #2563eb; }
  .links { display: grid; gap: 1rem; }
  .link-item { display: flex; justify-content: space-between; align-items: center; padding: 1rem; border: 1px solid #e5e7eb; border-radius: 0.5rem; text-decoration: none; color: #1f2937; transition: all 0.2s; }
  .link-item:hover { border-color: #2563eb; background-color: #eff6ff; }
  .link-title { font-weight: 500; }
  .link-arrow { color: #9ca3af; font-weight: 600; }
  @media (max-width: 768px) {
    .homepage { padding: 2rem 1rem; }
    .name { font-size: 2rem; }
    .section-header { flex-direction: column; gap: 0.5rem; }
  }
</style>
