---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

// Collections Í∞ÄÏ†∏Ïò§Í∏∞
const publications = await getCollection('publications');
const projects = await getCollection('projects');
const blogPosts = await getCollection('blog');

// Recent publications (ÏµúÏã† 3Í∞ú)
const recentPubs = publications
  .filter(p => p.data.status === 'published')
  .sort((a, b) => b.data.year - a.data.year)
  .slice(0, 3);

// Featured projects (ÏµúÏã† 3Í∞ú)
const featuredProjects = projects
  .sort((a, b) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime())
  .slice(0, 3);

// Recent blog posts (ÏµúÏã† 3Í∞ú)
const recentPosts = blogPosts
  .sort((a, b) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime())
  .slice(0, 3);

// ÌÜµÍ≥Ñ
const totalCitations = publications.reduce((sum, pub) => sum + (pub.data.citations || 0), 0);
const ssciPapers = publications.filter(p => p.data.type === 'ssci').length;
---

<BaseLayout title="Home" description="Professor of Business Administration specializing in media policy, digital platforms, and AI governance research">
  <div class="homepage">
    <header class="hero">
      <h1 class="name">ÍπÄÏö©Ìù¨ (YONGHEE KIM)</h1>
      <p class="subtitle">Assistant Professor of Business Administration | Media Policy & Digital Platform Research</p>
      <div class="stats">
        <div class="stat-item">
          <span class="stat-number">{publications.length}</span>
          <span class="stat-label">Publications</span>
        </div>
        <div class="stat-item">
          <span class="stat-number">{ssciPapers}</span>
          <span class="stat-label">SSCI Papers</span>
        </div>
        <div class="stat-item">
          <span class="stat-number">{totalCitations}</span>
          <span class="stat-label">Citations</span>
        </div>
        <div class="stat-item">
          <span class="stat-number">{projects.length}</span>
          <span class="stat-label">Projects</span>
        </div>
      </div>
    </header>

    <section class="bio">
      <p>
        I'm an Assistant Professor at <a href="https://mgt.sunmoon.ac.kr/mgt/ad/pp/profsrintrcnPage.do?profsrSe=A&mi=41267" target="_blank">Sunmoon University</a>, specializing in media policy, digital platform regulation, and AI governance research. My work focuses on Korean broadcasting policy, K-Content IP sovereignty, digital platform governance, and statistical analysis methodologies.
      </p>
      <p>
        My research has been published in leading SSCI journals including <em>Telecommunications Policy</em> (IF 5.6, Q1), <em>Journal of Retailing and Consumer Services</em> (IF 13.1, Q1), and <em>Sustainability</em>. With over {totalCitations} citations, my work on IoT adoption and technology acceptance has become a foundational reference in the field.
      </p>
      <p>
        I actively contribute to policy discourse through research presentations at the National Assembly and expert commentary in <a href="https://www.etnews.com/" target="_blank">The Electronic Times</a>. My current projects include developing the <strong>K-Survey Analytics Platform (KSAP)</strong>, a Korean-language statistical analysis platform designed as an alternative to SPSS and SmartPLS.
      </p>
      <p>
        In recognition of my contributions to media policy research, I've received commendations from the Korea Communications Commission and the Ministry of Science and ICT. I also serve as Director of the Daeyeon Industrial Policy Institute and am a cofounder of <a href="https://www.openroute.kr/" target="_blank">OpenRoute</a>.
      </p>
    </section>

    <section class="section">
      <div class="section-header">
        <h2>Recent Research</h2>
        <a href="/research/publications" class="section-link">View All Publications ‚Üí</a>
      </div>
      
      <div class="publication-list">
        {recentPubs.map(pub => (
          <article class="publication-item">
            <a href={`/research/${pub.slug}`} class="pub-link">
              <h3 class="pub-title">{pub.data.title}</h3>
              <div class="pub-meta">
                <span class="pub-authors">{pub.data.authors.join(', ')}</span>
                <span class="separator">‚Ä¢</span>
                <span class="pub-journal">{pub.data.journal}</span>
                <span class="separator">‚Ä¢</span>
                <span class="pub-year">{pub.data.year}</span>
                {pub.data.impact_factor && (
                  <>
                    <span class="separator">‚Ä¢</span>
                    <span class="pub-if">IF {pub.data.impact_factor}</span>
                  </>
                )}
                {pub.data.citations > 0 && (
                  <>
                    <span class="separator">‚Ä¢</span>
                    <span class="pub-citations">{pub.data.citations} citations</span>
                  </>
                )}
              </div>
            </a>
          </article>
        ))}
      </div>
    </section>

    <section class="section">
      <div class="section-header">
        <h2>Featured Projects</h2>
        <a href="/projects" class="section-link">View All Projects ‚Üí</a>
      </div>
      
      <div class="project-list">
        {featuredProjects.map(project => (
          <article class="project-item">
            <a href={`/projects/${project.slug}`} class="project-link">
              <div class="project-header">
                <h3 class="project-title">{project.data.title}</h3>
                <span class="project-category">{project.data.category}</span>
              </div>
              <p class="project-description">{project.data.description}</p>
              <div class="project-meta">
                <span class="project-date">{new Date(project.data.date).toLocaleDateString('en-US', { year: 'numeric', month: 'short' })}</span>
                {project.data.tags && project.data.tags.length > 0 && (
                  <div class="project-tags">
                    {project.data.tags.slice(0, 3).map(tag => (
                      <span class="tag">{tag}</span>
                    ))}
                  </div>
                )}
              </div>
            </a>
          </article>
        ))}
      </div>
    </section>

    <section class="section">
      <div class="section-header">
        <h2>Latest Blog Posts</h2>
        <a href="/blog" class="section-link">View All Posts ‚Üí</a>
      </div>
      
      <div class="blog-list">
        {recentPosts.map(post => (
          <article class="blog-item">
            <a href={`/blog/${post.slug}`} class="blog-link">
              <div class="blog-meta">
                <span class="blog-category">{post.data.category}</span>
                <span class="separator">‚Ä¢</span>
                <span class="blog-date">{new Date(post.data.date).toLocaleDateString('en-US', { year: 'numeric', month: 'short', day: 'numeric' })}</span>
              </div>
              <h3 class="blog-title">{post.data.title}</h3>
              <p class="blog-excerpt">{post.data.excerpt}</p>
            </a>
          </article>
        ))}
      </div>
    </section>

    <section class="section">
      <div class="section-header">
        <h2>Connect</h2>
      </div>

      <nav class="links">
        <a href="mailto:yhkim1981@sunmoon.ac.kr" class="link-item">
          <span class="link-icon">‚úâÔ∏è</span>
          <span class="link-title">Email</span>
          <span class="link-arrow">‚Üí</span>
        </a>
        <a href="https://github.com/yhkim1981-svg" target="_blank" rel="noopener" class="link-item">
          <span class="link-icon">üíª</span>
          <span class="link-title">GitHub</span>
          <span class="link-arrow">‚Üí</span>
        </a>
        <a href="https://scholar.google.com/citations?user=semkeskAAAAJ" target="_blank" rel="noopener" class="link-item">
          <span class="link-icon">üéì</span>
          <span class="link-title">Google Scholar</span>
          <span class="link-arrow">‚Üí</span>
        </a>
        <a href="https://bsky.app/profile/hastara.bsky.social" target="_blank" rel="noopener" class="link-item">
          <span class="link-icon">ü¶ã</span>
          <span class="link-title">Bluesky</span>
          <span class="link-arrow">‚Üí</span>
        </a>
      </nav>
    </section>
  </div>
</BaseLayout>

