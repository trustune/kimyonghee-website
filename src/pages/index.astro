---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const publications = await getCollection('publications');
const projects = await getCollection('projects');
const blogPosts = await getCollection('blog');

const recentPubs = publications
  .filter(p => p.data.status === 'published')
  .sort((a, b) => b.data.year - a.data.year)
  .slice(0, 3);

const featuredProjects = projects
  .sort((a, b) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime())
  .slice(0, 3);

const recentPosts = blogPosts
  .sort((a, b) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime())
  .slice(0, 3);
---

<BaseLayout title="Home" description="Assistant Professor of Business Administration at Sunmoon University, specializing in media policy, digital platforms, AI governance, and data analytics.">
  <div class="homepage">
    <header class="hero">
      <h1 class="name">Yonghee Kim</h1>
      <p class="subtitle">Assistant Professor, Department of Business Administration, Sunmoon University</p>
    </header>

    <section class="bio">
      <p>
        I study how digital platforms reshape media markets and what that means for public policy. My work sits at the intersection of media economics, platform regulation, and data science&mdash;using econometric methods and input-output analysis to evaluate broadcasting industry structure, OTT market dynamics, and ICT efficiency in Korea.
      </p>
      <p>
        I teach at <a href="https://mgt.sunmoon.ac.kr/mgt/ad/pp/profsrintrcnPage.do?profsrSe=A&mi=41267" target="_blank" rel="noopener">Sunmoon University</a> and direct the Daeyeon Industrial Policy Institute. I also write policy commentary for <a href="https://www.etnews.com/" target="_blank" rel="noopener">The Electronic Times</a> and cofounded <a href="https://www.openroute.kr/" target="_blank" rel="noopener">OpenRoute</a>, a consultancy bridging academic research and industry practice.
      </p>
    </section>

    <hr />

    <section class="section">
      <h2 class="section-title">Recent Research</h2>
      <ul class="item-list">
        {recentPubs.map(pub => (
          <li>
            <a href={`/research/${pub.slug}`}>
              {pub.data.title}
              <span class="item-meta">
                {pub.data.journal}, {pub.data.year}
              </span>
            </a>
          </li>
        ))}
      </ul>
      <a href="/research/publications" class="view-all">View all research &rarr;</a>
    </section>

    <hr />

    <section class="section">
      <h2 class="section-title">Recent Writing</h2>
      <ul class="item-list">
        {recentPosts.map(post => (
          <li>
            <a href={`/writing/${post.slug}`}>
              {post.data.title_en || post.data.title}
              <span class="item-meta">
                {new Date(post.data.date).toLocaleDateString('en-US', { year: 'numeric', month: 'short', day: 'numeric' })}
              </span>
            </a>
          </li>
        ))}
      </ul>
      <a href="/writing" class="view-all">View all writing &rarr;</a>
    </section>

    <hr />

    <section class="section">
      <h2 class="section-title">Current Projects</h2>
      <ul class="item-list">
        {featuredProjects.map(project => (
          <li>
            <a href={`/projects/${project.slug}`}>
              {project.data.title_en || project.data.title}
              <span class="item-meta">
                {new Date(project.data.date).toLocaleDateString('en-US', { year: 'numeric', month: 'short' })}
              </span>
            </a>
          </li>
        ))}
      </ul>
      <a href="/projects" class="view-all">View all projects &rarr;</a>
    </section>
  </div>
</BaseLayout>

<style>
  .homepage {
    max-width: var(--container-max);
    margin: 0 auto;
    padding: var(--space-16) var(--space-8);
  }

  /* Hero */
  .hero {
    margin-bottom: var(--space-12);
  }

  .name {
    font-family: var(--font-serif);
    font-size: var(--step-4);
    font-weight: 400;
    color: var(--color-text);
    letter-spacing: -0.02em;
    margin: 0;
    line-height: 1.1;
  }

  .subtitle {
    font-size: var(--step-0);
    color: var(--color-text-secondary);
    margin: var(--space-4) 0 0 0;
  }

  /* Bio */
  .bio {
    font-size: var(--step-0);
    line-height: 1.7;
    color: var(--color-text-secondary);
    margin-bottom: 0;
  }

  .bio p {
    margin: 0 0 var(--space-6) 0;
  }

  .bio p:last-child {
    margin-bottom: 0;
  }

  .bio a {
    color: var(--color-accent);
    text-decoration: underline;
    text-underline-offset: 0.2em;
    text-decoration-thickness: 1px;
  }

  .bio a:hover {
    color: var(--color-accent-hover);
  }

  .bio em {
    font-style: italic;
  }

  /* Horizontal rules */
  hr {
    border: none;
    border-top: 1px solid var(--color-border-light);
    margin: var(--space-12) 0;
  }

  /* Sections */
  .section {
    margin-bottom: 0;
  }

  .section-title {
    font-family: var(--font-serif);
    font-size: var(--step-1);
    font-weight: 400;
    color: var(--color-text);
    margin: 0 0 var(--space-4) 0;
  }

  /* Item lists */
  .item-list {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .item-list li {
    padding: var(--space-3) 0;
    border-bottom: 1px solid var(--color-border-light);
  }

  .item-list li:last-child {
    border-bottom: none;
  }

  .item-list a {
    color: var(--color-text);
    text-decoration: none;
    transition: color var(--transition-fast);
    display: block;
    line-height: 1.5;
  }

  .item-list a:hover {
    color: var(--color-accent);
  }

  .item-meta {
    color: var(--color-text-muted);
    font-size: 0.875rem;
    margin-left: var(--space-2);
  }

  .item-meta::before {
    content: "(";
  }

  .item-meta::after {
    content: ")";
  }

  /* View all links */
  .view-all {
    font-size: 0.875rem;
    color: var(--color-text-muted);
    text-decoration: none;
    margin-top: var(--space-4);
    display: inline-block;
    transition: color var(--transition-fast);
  }

  .view-all:hover {
    color: var(--color-accent);
  }

  /* Responsive */
  @media (max-width: 768px) {
    .homepage {
      padding: var(--space-8) var(--space-4);
    }

    .hero {
      margin-bottom: var(--space-8);
    }

    hr {
      margin: var(--space-8) 0;
    }

    .item-meta {
      display: block;
      margin-left: 0;
      margin-top: var(--space-1);
    }

    .item-meta::before,
    .item-meta::after {
      content: none;
    }
  }

  @media (max-width: 480px) {
    .homepage {
      padding: var(--space-6) var(--space-3);
    }
  }
</style>
