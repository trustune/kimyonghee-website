---
import BaseLayout from '../layouts/BaseLayout.astro';
import Search from '../components/Search.astro';
---

<BaseLayout
  title="Search - Yonghee Kim"
  description="Search content across research, blog, and teaching materials"
>
  <div class="search-page">
    <header class="page-header">
      <h1>Search</h1>
      <p class="page-description">
        Search across all content including research papers, blog posts, and teaching materials.
      </p>
    </header>

    <div class="search-container">
      <Search />
    </div>

    <section class="search-tips">
      <h2>Search Tips</h2>
      <ul>
        <li>Use multiple keywords for more precise results</li>
        <li>Click on search results to navigate to the page</li>
        <li>Search covers titles, descriptions, and tags</li>
      </ul>
    </section>
  </div>
</BaseLayout>

<style>
  .search-page {
    max-width: var(--max-width);
    margin: 0 auto;
    padding: 0 2rem;
  }

  .page-header {
    margin-bottom: 2rem;
  }

  .page-header h1 {
    font-family: var(--font-heading);
    font-size: 2rem;
    font-weight: 700;
    color: var(--color-text);
    margin: 0 0 0.75rem 0;
  }

  .page-description {
    font-size: 1rem;
    color: var(--color-text-secondary);
    line-height: 1.6;
    margin: 0;
  }

  .search-container {
    margin-bottom: 2rem;
  }

  .search-tips {
    padding: 1.5rem;
    background: var(--color-bg-secondary);
    border: 1px solid var(--color-border);
    border-radius: 0.5rem;
  }

  .search-tips h2 {
    font-family: var(--font-primary);
    font-size: 1rem;
    font-weight: 600;
    color: var(--color-text);
    margin: 0 0 1rem 0;
  }

  .search-tips ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .search-tips li {
    padding: 0.375rem 0;
    padding-left: 1.25rem;
    position: relative;
    line-height: 1.6;
    color: var(--color-text-secondary);
    font-size: 0.875rem;
  }

  .search-tips li::before {
    content: "â€¢";
    position: absolute;
    left: 0;
    color: var(--color-accent);
  }

  @media (max-width: 768px) {
    .search-page {
      padding: 0 1rem;
    }

    .page-header h1 {
      font-size: 1.75rem;
    }

    .search-tips {
      padding: 1.25rem;
    }
  }
</style>
