---
import BaseLayout from '../layouts/BaseLayout.astro';
import Search from '../components/Search.astro';
---

<BaseLayout
  title="Search - Yonghee Kim"
  description="Search content across research, blog, and teaching materials"
>
  <div class="search-page">
    <header class="page-header">
      <h1>Search</h1>
      <p class="page-description">
        Search across all content including research papers, blog posts, and teaching materials.
      </p>
    </header>

    <div class="search-container">
      <Search />
    </div>

    <section class="search-tips">
      <h2>Search Tips</h2>
      <ul>
        <li>Use multiple keywords for more precise results</li>
        <li>Click on search results to navigate to the page</li>
        <li>Search works in both light and dark modes</li>
      </ul>
    </section>
  </div>
</BaseLayout>

<style>
  .search-page {
    max-width: var(--container-max);
    margin: 0 auto;
    padding: var(--space-16) var(--space-8);
  }

  .page-header {
    margin-bottom: var(--space-12);
  }

  .page-header h1 {
    font-family: var(--font-serif);
    font-size: var(--step-4);
    font-weight: 400;
    color: var(--color-text);
    margin-bottom: var(--space-4);
  }

  .page-description {
    font-size: var(--step-0);
    color: var(--color-text-secondary);
    line-height: 1.7;
    max-width: var(--measure);
  }

  .search-container {
    max-width: 900px;
    margin: 0 auto var(--space-16);
  }

  .search-tips {
    max-width: 900px;
    margin: 0 auto;
    padding: var(--space-8);
    background: var(--color-surface);
    border: 1px solid var(--color-border);
    border-radius: var(--border-radius);
  }

  .search-tips h2 {
    font-family: var(--font-serif);
    font-size: var(--step-1);
    font-weight: 400;
    color: var(--color-text);
    margin-bottom: var(--space-4);
  }

  .search-tips ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .search-tips li {
    padding: var(--space-2) 0;
    padding-left: var(--space-6);
    position: relative;
    line-height: 1.6;
    color: var(--color-text-secondary);
  }

  .search-tips li::before {
    content: "\2013";
    position: absolute;
    left: 0;
    color: var(--color-accent);
    font-weight: bold;
  }

  @media (max-width: 768px) {
    .search-page {
      padding: var(--space-8) var(--space-4);
    }

    .page-header h1 {
      font-size: var(--step-3);
    }

    .page-description {
      font-size: 1rem;
    }

    .search-tips {
      padding: var(--space-6);
    }

    .search-tips h2 {
      font-size: var(--step-0);
    }
  }
</style>
