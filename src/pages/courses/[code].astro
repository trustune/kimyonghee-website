---
import BaseLayout from '../../layouts/BaseLayout.astro';
import coursesData from '../../data/courses.json';

export async function getStaticPaths() {
  const courses = coursesData.courses;
  return courses.map(course => ({
    params: { code: course.code },
    props: { course }
  }));
}

const { course } = Astro.props;

// Evaluation labels in English
const evalLabels = {
  midterm: 'Midterm',
  final: 'Final',
  project: 'Project',
  assignment: 'Assignment',
  quiz: 'Quiz',
  attendance: 'Attendance',
  participation: 'Participation',
  individual: 'Individual'
};
---

<BaseLayout title={`${course.title} - Kim Yonghee`} description={course.description}>
  <div class="course-page">
    <!-- Back Link -->
    <nav class="breadcrumb">
      <a href="/teaching" class="back-link">
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <line x1="19" y1="12" x2="5" y2="12"></line>
          <polyline points="12 19 5 12 12 5"></polyline>
        </svg>
        Back to Teaching
      </a>
    </nav>

    <!-- Page Header -->
    <header class="page-header">
      <h1>{course.title}</h1>
      <p class="title-en">{course.title_en}</p>

      <div class="course-info-grid">
        <div class="info-item">
          <span class="info-label">Course Code</span>
          <span class="info-value">{course.code}</span>
        </div>
        <div class="info-item">
          <span class="info-label">Semester</span>
          <span class="info-value">{course.semester}</span>
        </div>
        <div class="info-item">
          <span class="info-label">Schedule</span>
          <span class="info-value">{course.schedule}</span>
        </div>
        <div class="info-item">
          <span class="info-label">Credits</span>
          <span class="info-value">{course.credits}/{course.hours}</span>
        </div>
        <div class="info-item">
          <span class="info-label">Year</span>
          <span class="info-value">Year {course.year}</span>
        </div>
        <div class="info-item">
          <span class="info-label">Department</span>
          <span class="info-value">{course.department}</span>
        </div>
      </div>

      <div class="contact-info">
        <p><strong>Instructor:</strong> {course.instructor}</p>
        <p><strong>Email:</strong> <a href={`mailto:${course.email}`}>{course.email}</a></p>
        {course.office && <p><strong>Office:</strong> {course.office}</p>}
        {course.office_hours && <p><strong>Office Hours:</strong> {course.office_hours}</p>}
      </div>
    </header>

    <!-- Course Description -->
    <section class="section">
      <h2>Course Description</h2>
      <p class="description">{course.description}</p>
    </section>

    <!-- Learning Objectives -->
    <section class="section">
      <h2>Learning Objectives</h2>
      <ul class="objectives-list">
        {course.objectives.map(obj => (
          <li>{obj}</li>
        ))}
      </ul>
    </section>

    <!-- Evaluation -->
    <section class="section">
      <h2>Evaluation</h2>
      <div class="evaluation-grid">
        {Object.entries(course.evaluation).map(([key, value]) => (
          <div class="eval-card">
            <div class="eval-label">{evalLabels[key] || key}</div>
            <div class="eval-value">{value}<span class="percent">%</span></div>
          </div>
        ))}
      </div>
    </section>

    <!-- Weekly Schedule -->
    <section class="section">
      <h2>Weekly Schedule</h2>
      <div class="schedule-table-wrapper">
        <table class="schedule-table">
          <thead>
            <tr>
              <th class="week-col">Week</th>
              <th class="topic-col">Topic</th>
              <th class="details-col">Details</th>
            </tr>
          </thead>
          <tbody>
            {course.weekly_topics.map((week) => (
              <tr class={week.topic.includes('Exam') ? 'exam-row' : ''}>
                <td class="week-num">{week.week}</td>
                <td class="topic">{week.topic}</td>
                <td class="details">{week.details}</td>
              </tr>
            ))}
          </tbody>
        </table>
      </div>
    </section>

    <!-- Textbook -->
    <section class="section">
      <h2>Textbook</h2>
      {typeof course.textbook === 'object' ? (
        <div class="textbook-card">
          <div class="textbook-title">{course.textbook.title}</div>
          <div class="textbook-author">{course.textbook.author}</div>
          <div class="textbook-publisher">{course.textbook.publisher}, {course.textbook.year}</div>
        </div>
      ) : (
        <div class="textbook-simple">
          <p>{course.textbook}</p>
        </div>
      )}
    </section>

    <!-- Back to Teaching -->
    <div class="footer-nav">
      <a href="/teaching" class="back-link">
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <line x1="19" y1="12" x2="5" y2="12"></line>
          <polyline points="12 19 5 12 12 5"></polyline>
        </svg>
        Back to Teaching
      </a>
    </div>
  </div>
</BaseLayout>

<style>
  .course-page {
    max-width: var(--container-max);
    margin: 0 auto;
    padding: var(--space-12) var(--space-8);
  }

  /* Breadcrumb */
  .breadcrumb {
    margin-bottom: var(--space-8);
  }

  .back-link {
    display: inline-flex;
    align-items: center;
    gap: var(--space-2);
    color: var(--color-accent);
    text-decoration: none;
    font-size: var(--step-0);
    font-weight: 500;
    transition: color var(--transition-fast);
  }

  .back-link:hover {
    color: var(--color-accent-hover);
  }

  /* Page Header */
  .page-header {
    margin-bottom: var(--space-16);
    padding-bottom: var(--space-8);
    border-bottom: 1px solid var(--color-border);
  }

  .page-header h1 {
    font-family: var(--font-serif);
    font-size: var(--step-3);
    color: var(--color-text);
    margin-bottom: var(--space-2);
  }

  .title-en {
    font-size: var(--step-1);
    color: var(--color-text-muted);
    font-weight: 300;
    margin-bottom: var(--space-8);
  }

  .course-info-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: var(--space-6);
    margin-bottom: var(--space-8);
    padding: var(--space-6);
    background: var(--color-surface);
    border: 1px solid var(--color-border-light);
    border-radius: var(--border-radius);
  }

  .info-item {
    display: flex;
    flex-direction: column;
    gap: var(--space-1);
  }

  .info-label {
    font-size: 0.75rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--color-text-muted);
    font-weight: 600;
  }

  .info-value {
    font-size: var(--step-0);
    color: var(--color-text);
    font-weight: 500;
  }

  .contact-info {
    padding: var(--space-6);
    background: var(--color-surface);
    border-left: 3px solid var(--color-accent);
    border-radius: var(--border-radius);
  }

  .contact-info p {
    margin-bottom: var(--space-2);
    color: var(--color-text-secondary);
    font-size: var(--step-0);
  }

  .contact-info p:last-child {
    margin-bottom: 0;
  }

  .contact-info a {
    color: var(--color-accent);
    text-decoration: none;
  }

  .contact-info a:hover {
    color: var(--color-accent-hover);
    text-decoration: underline;
  }

  /* Section */
  .section {
    margin-bottom: var(--space-16);
  }

  .section h2 {
    font-family: var(--font-serif);
    font-size: var(--step-2);
    color: var(--color-text);
    margin-bottom: var(--space-6);
    padding-bottom: var(--space-2);
    border-bottom: 1px solid var(--color-border);
  }

  .description {
    font-size: var(--step-0);
    line-height: 1.8;
    color: var(--color-text-secondary);
    max-width: var(--measure);
  }

  /* Objectives */
  .objectives-list {
    list-style: none;
    padding: 0;
  }

  .objectives-list li {
    padding: var(--space-4) var(--space-4) var(--space-4) var(--space-8);
    margin-bottom: var(--space-3);
    background: var(--color-bg);
    border: 1px solid var(--color-border-light);
    border-left: 3px solid var(--color-accent);
    border-radius: var(--border-radius);
    color: var(--color-text-secondary);
    line-height: 1.7;
    position: relative;
  }

  .objectives-list li::before {
    content: "\2192";
    position: absolute;
    left: var(--space-4);
    color: var(--color-accent);
    font-weight: bold;
  }

  /* Evaluation */
  .evaluation-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
    gap: var(--space-6);
  }

  .eval-card {
    padding: var(--space-6);
    background: var(--color-bg);
    border: 1px solid var(--color-border);
    border-radius: var(--border-radius);
    text-align: center;
    transition: border-color var(--transition-fast);
  }

  .eval-card:hover {
    border-color: var(--color-accent);
  }

  .eval-label {
    font-size: 0.875rem;
    color: var(--color-text-muted);
    margin-bottom: var(--space-2);
    font-weight: 500;
  }

  .eval-value {
    font-size: var(--step-3);
    color: var(--color-accent);
    font-weight: 700;
  }

  .percent {
    font-size: var(--step-1);
    margin-left: var(--space-1);
  }

  /* Schedule Table */
  .schedule-table-wrapper {
    overflow-x: auto;
    border-radius: var(--border-radius);
    border: 1px solid var(--color-border);
  }

  .schedule-table {
    width: 100%;
    border-collapse: collapse;
    background: var(--color-bg);
  }

  .schedule-table thead {
    background: var(--color-surface);
  }

  .schedule-table th {
    padding: var(--space-4);
    text-align: left;
    font-weight: 600;
    color: var(--color-text);
    border-bottom: 1px solid var(--color-border);
    font-size: 0.875rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .week-col {
    width: 80px;
  }

  .topic-col {
    width: 35%;
  }

  .details-col {
    width: auto;
  }

  .schedule-table td {
    padding: var(--space-4);
    border-bottom: 1px solid var(--color-border-light);
    color: var(--color-text-secondary);
  }

  .schedule-table tbody tr:hover {
    background: var(--color-surface);
  }

  .week-num {
    text-align: center;
    font-weight: 600;
    color: var(--color-text);
  }

  .topic {
    font-weight: 500;
    color: var(--color-text);
  }

  .details {
    font-size: var(--step-0);
    color: var(--color-text-muted);
  }

  .exam-row {
    background: var(--color-accent-light);
  }

  .exam-row:hover {
    background: var(--color-accent-light);
  }

  .exam-row .topic {
    color: var(--color-accent);
    font-weight: 600;
  }

  /* Textbook */
  .textbook-card {
    padding: var(--space-8);
    background: var(--color-surface);
    border-left: 3px solid var(--color-border);
    border-radius: var(--border-radius);
  }

  .textbook-title {
    font-family: var(--font-serif);
    font-size: var(--step-1);
    font-weight: 600;
    color: var(--color-text);
    margin-bottom: var(--space-2);
  }

  .textbook-author {
    font-size: var(--step-0);
    color: var(--color-text-secondary);
    margin-bottom: var(--space-1);
  }

  .textbook-publisher {
    font-size: 0.875rem;
    color: var(--color-text-muted);
  }

  .textbook-simple {
    padding: var(--space-6);
    background: var(--color-surface);
    border-left: 3px solid var(--color-border);
    border-radius: var(--border-radius);
  }

  .textbook-simple p {
    color: var(--color-text-secondary);
    margin: 0;
  }

  /* Footer Nav */
  .footer-nav {
    margin-top: var(--space-16);
    padding-top: var(--space-8);
    border-top: 1px solid var(--color-border);
  }

  /* Responsive */
  @media (max-width: 768px) {
    .course-page {
      padding: var(--space-8) var(--space-4);
    }

    .page-header h1 {
      font-size: var(--step-2);
    }

    .title-en {
      font-size: var(--step-0);
    }

    .course-info-grid {
      grid-template-columns: 1fr 1fr;
    }

    .evaluation-grid {
      grid-template-columns: repeat(2, 1fr);
    }

    .schedule-table th,
    .schedule-table td {
      padding: var(--space-3) var(--space-2);
      font-size: 0.875rem;
    }

    .week-col {
      width: 50px;
    }
  }
</style>
