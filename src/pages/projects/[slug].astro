---
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';
import LineChart from '../../components/LineChart.astro';
import SocialShare from '../../components/SocialShare.astro';

export async function getStaticPaths() {
  const projects = await getCollection('projects');
  return projects.map(project => ({
    params: { slug: project.slug },
    props: { project },
  }));
}

const { project } = Astro.props;
const { Content } = await project.render();
const { data } = project;
const showCharts = project.slug === 'broadcasting-revenue-2015-2024';

// Chart data
const revenueLabels = ['2015', '2016', '2017', '2018', '2019', '2020', '2021', '2022', '2023', '2024'];
const revenueDatasets = [
  {
    label: 'Pay-TV Subscriptions',
    data: [27.5, 28.3, 29.4, 31.2, 32.4, 33.5, 36.5, 37.1, 37.3, 37.6],
    borderColor: 'rgba(102, 126, 234, 1)',
    backgroundColor: 'rgba(102, 126, 234, 0.1)',
    borderWidth: 3,
    fill: true,
    tension: 0.4
  },
  {
    label: 'Broadcasting Advertising',
    data: [35.0, 34.6, 31.8, 32.4, 33.0, 31.4, 31.0, 28.8, 25.0, 22.9],
    borderColor: 'rgba(239, 68, 68, 1)',
    backgroundColor: 'rgba(239, 68, 68, 0.1)',
    borderWidth: 3,
    fill: true,
    tension: 0.4
  },
  {
    label: 'Home Shopping Fees',
    data: [0, 0, 24.4, 24.0, 23.7, 23.5, 22.0, 21.5, 20.5, 20.2],
    borderColor: 'rgba(245, 158, 11, 1)',
    backgroundColor: 'rgba(245, 158, 11, 0.1)',
    borderWidth: 3,
    fill: true,
    tension: 0.4
  }
];

const advertisingDatasets = [
  {
    label: 'Broadcasting Advertising',
    data: [35.0, 34.6, 31.8, 32.4, 33.0, 31.4, 31.0, 28.8, 25.0, 22.9],
    borderColor: 'rgba(239, 68, 68, 1)',
    backgroundColor: 'rgba(239, 68, 68, 0.1)',
    borderWidth: 3,
    fill: true,
    tension: 0.4
  },
  {
    label: 'Digital Advertising',
    data: [null, null, null, null, 50.5, 57.8, 67.8, 76.1, 83.8, null],
    borderColor: 'rgba(59, 130, 246, 1)',
    backgroundColor: 'rgba(59, 130, 246, 0.1)',
    borderWidth: 3,
    fill: true,
    tension: 0.4,
    borderDash: [5, 5]
  }
];

const platformDatasets = [
  {
    label: 'IPTV',
    data: [14.7, 16.7, 18.9, 21.1, 23.3, 25.0, 26.8, 27.9, 28.7, 29.3],
    borderColor: 'rgba(16, 185, 129, 1)',
    backgroundColor: 'rgba(16, 185, 129, 0.1)',
    borderWidth: 3,
    fill: true,
    tension: 0.4
  },
  {
    label: 'Cable (SO)',
    data: [9.4, 8.9, 8.5, 8.0, 7.6, 7.0, 6.5, 6.1, 5.9, 5.7],
    borderColor: 'rgba(239, 68, 68, 1)',
    backgroundColor: 'rgba(239, 68, 68, 0.1)',
    borderWidth: 3,
    fill: true,
    tension: 0.4
  }
];
---

<BaseLayout 
  title={`${data.title_en} | Yonghee Kim`}
  description={data.description_en}
>
  <article class="project-detail">
    <header class="project-header">
      <div class="project-meta-top">
        <span class="category-badge">{data.category}</span>
        <time class="project-date">{new Date(data.date).toLocaleDateString('ko-KR')}</time>
      </div>
      
      <h1 class="project-title">{data.title_en}</h1>
      
      {data.subtitle_en && (
        <p class="project-subtitle">{data.subtitle_en}</p>
      )}

      {data.conference_en && (
        <div class="conference-info">
          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
            <line x1="16" y1="2" x2="16" y2="6"></line>
            <line x1="8" y1="2" x2="8" y2="6"></line>
            <line x1="3" y1="10" x2="21" y2="10"></line>
          </svg>
          <span>{data.conference_en}</span>
        </div>
      )}

      <div class="project-tags">
        {data.tags.map((tag) => (
          <span class="tag">{tag}</span>
        ))}
      </div>
    </header>

    <div class="project-content">
      <Content />
    </div>

    {showCharts && (
      <>
        <div id="chart-container-revenue" style="display: none;">
          <LineChart
            chartId="revenueChart"
            title="Net Inflow Revenue Trends (2015-2024)"
            labels={revenueLabels}
            datasets={revenueDatasets}
            yAxisLabel="Amount (Trillion Won)"
            yAxisCallback={true}
          />
        </div>
        <div id="chart-container-advertising" style="display: none;">
          <LineChart
            chartId="advertisingChart"
            title="Broadcasting vs Digital Advertising Trends"
            labels={revenueLabels}
            datasets={advertisingDatasets}
            yAxisLabel="Amount (Trillion Won)"
            yAxisCallback={false}
          />
        </div>
        <div id="chart-container-platform" style="display: none;">
          <LineChart
            chartId="platformChart"
            title="IPTV vs Cable Platform Subscription Fee Trends"
            labels={revenueLabels}
            datasets={platformDatasets}
            yAxisLabel="Amount (Trillion Won)"
            yAxisCallback={false}
          />
        </div>
        <script>
          document.addEventListener('DOMContentLoaded', () => {
            const projectContent = document.querySelector('.project-content');
            if (!projectContent) return;

            // Find HTML comment markers and replace with charts
            const walker = document.createTreeWalker(
              projectContent,
              NodeFilter.SHOW_COMMENT,
              null
            );

            const comments = [];
            let node;
            while (node = walker.nextNode()) {
              comments.push(node);
            }

            comments.forEach(comment => {
              const text = comment.textContent.trim();

              if (text === 'CHART:revenueChart') {
                const container = document.getElementById('chart-container-revenue');
                if (container) {
                  container.style.display = 'block';
                  comment.parentNode.replaceChild(container, comment);
                }
              } else if (text === 'CHART:advertisingChart') {
                const container = document.getElementById('chart-container-advertising');
                if (container) {
                  container.style.display = 'block';
                  comment.parentNode.replaceChild(container, comment);
                }
              } else if (text === 'CHART:platformChart') {
                const container = document.getElementById('chart-container-platform');
                if (container) {
                  container.style.display = 'block';
                  comment.parentNode.replaceChild(container, comment);
                }
              }
            });
          });
        </script>
      </>
    )}

    <SocialShare
      title={data.title_en}
      url={`https://kimyonghee.com/projects/${project.slug}`}
      excerpt={data.summary}
    />

    <footer class="project-footer">
      <a href="/projects" class="back-link">
        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <line x1="19" y1="12" x2="5" y2="12"></line>
          <polyline points="12 19 5 12 12 5"></polyline>
        </svg>
        <span data-lang="en">Back to Projects</span>
        <span data-lang="ko">프로젝트 목록으로</span>
      </a>
    </footer>
  </article>
</BaseLayout>

<style>
  .project-detail {
    max-width: 1100px;
    margin: 0 auto;
    padding: 3rem 1.5rem;
  }

  .project-header {
    margin-bottom: 3rem;
    padding-bottom: 2rem;
    border-bottom: 2px solid #e5e7eb;
  }

  .project-meta-top {
    display: flex;
    align-items: center;
    gap: 1rem;
    margin-bottom: 1.5rem;
  }

  .category-badge {
    padding: 0.5rem 1rem;
    background: #dbeafe;
    color: #1e40af;
    font-size: 0.875rem;
    font-weight: 600;
    border-radius: 9999px;
  }

  .project-date {
    font-size: 0.875rem;
    color: #6b7280;
  }

  .project-title {
    font-size: 2.5rem;
    font-weight: 700;
    color: #1e40af;
    margin-bottom: 1rem;
    line-height: 1.2;
  }

  .project-subtitle {
    font-size: 1.25rem;
    color: #6b7280;
    margin-bottom: 1.5rem;
    line-height: 1.4;
  }

  .conference-info {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    padding: 1rem;
    background: #fef3c7;
    border-left: 4px solid #f59e0b;
    border-radius: 0.25rem;
    margin-bottom: 1.5rem;
  }

  .conference-info svg {
    flex-shrink: 0;
    color: #f59e0b;
  }

  .conference-info span {
    font-weight: 600;
    color: #92400e;
  }

  .project-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .tag {
    padding: 0.25rem 0.75rem;
    background: #f3f4f6;
    color: #4b5563;
    font-size: 0.875rem;
    border-radius: 0.25rem;
  }

  .project-content {
    font-size: 1.0625rem;
    line-height: 1.75;
    color: #374151;
  }

  .project-content :global(h2) {
    font-size: 1.875rem;
    font-weight: 700;
    color: #1e40af;
    margin-top: 2.5rem;
    margin-bottom: 1rem;
  }

  .project-content :global(h3) {
    font-size: 1.5rem;
    font-weight: 600;
    color: #1f2937;
    margin-top: 2rem;
    margin-bottom: 0.75rem;
  }

  .project-content :global(h4) {
    font-size: 1.25rem;
    font-weight: 600;
    color: #374151;
    margin-top: 1.5rem;
    margin-bottom: 0.5rem;
  }

  .project-content :global(p) {
    margin-bottom: 1.25rem;
  }

  .project-content :global(ul),
  .project-content :global(ol) {
    margin-bottom: 1.25rem;
    padding-left: 1.5rem;
  }

  .project-content :global(li) {
    margin-bottom: 0.5rem;
  }

  .project-content :global(code) {
    background: #f3f4f6;
    padding: 0.125rem 0.375rem;
    border-radius: 0.25rem;
    font-size: 0.9375rem;
    font-family: 'Monaco', 'Courier New', monospace;
  }

  .project-content :global(pre) {
    background: #1f2937;
    color: #f9fafb;
    padding: 1.5rem;
    border-radius: 0.5rem;
    overflow-x: auto;
    margin-bottom: 1.5rem;
  }

  .project-content :global(pre code) {
    background: none;
    padding: 0;
    color: inherit;
  }

  .project-content :global(blockquote) {
    border-left: 4px solid #2563eb;
    padding-left: 1rem;
    margin: 1.5rem 0;
    color: #6b7280;
    font-style: italic;
  }

  .project-content :global(strong) {
    font-weight: 600;
    color: #1f2937;
  }

  .project-content :global(a) {
    color: #2563eb;
    text-decoration: underline;
  }

  .project-content :global(a:hover) {
    color: #1e40af;
  }

  .project-footer {
    margin-top: 3rem;
    padding-top: 2rem;
    border-top: 2px solid #e5e7eb;
  }

  .back-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    color: #2563eb;
    text-decoration: none;
    font-weight: 600;
    transition: all 0.2s;
  }

  .back-link:hover {
    color: #1e40af;
    gap: 0.75rem;
  }

  .back-link svg {
    transition: transform 0.2s;
  }

  .back-link:hover svg {
    transform: translateX(-4px);
  }

  @media (max-width: 768px) {
    .project-title {
      font-size: 2rem;
    }

    .project-subtitle {
      font-size: 1.125rem;
    }

    .project-content {
      font-size: 1rem;
    }
  }
</style>
