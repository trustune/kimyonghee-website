---
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';

export async function getStaticPaths() {
  const projects = await getCollection('projects');
  return projects.map(project => ({
    params: { slug: project.slug },
    props: { project },
  }));
}

const { project } = Astro.props;
const { Content } = await project.render();
const { data } = project;
---

<BaseLayout 
  title={`${data.title} | Yonghee Kim`}
  description={data.description}
>
  <article class="project-detail">
    <header class="project-header">
      <div class="project-meta-top">
        <span class="category-badge">{data.category}</span>
        <time class="project-date">{new Date(data.date).toLocaleDateString('ko-KR')}</time>
      </div>
      
      <h1 class="project-title-ko">{data.title}</h1>
      <p class="project-title-en">{data.title_en}</p>
      
      {data.subtitle && (
        <div class="project-subtitle">
          <p class="subtitle-ko">{data.subtitle}</p>
          <p class="subtitle-en">{data.subtitle_en}</p>
        </div>
      )}

      {data.conference && (
        <div class="conference-info">
          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
            <line x1="16" y1="2" x2="16" y2="6"></line>
            <line x1="8" y1="2" x2="8" y2="6"></line>
            <line x1="3" y1="10" x2="21" y2="10"></line>
          </svg>
          <div>
            <span class="conference-ko">{data.conference}</span>
            <span class="conference-en">{data.conference_en}</span>
          </div>
        </div>
      )}

      <div class="project-tags">
        {data.tags.map((tag) => (
          <span class="tag">{tag}</span>
        ))}
      </div>
    </header>

    <div class="project-content">
      <Content />
    </div>

    <footer class="project-footer">
      <a href="/projects" class="back-link">
        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <line x1="19" y1="12" x2="5" y2="12"></line>
          <polyline points="12 19 5 12 12 5"></polyline>
        </svg>
        <span data-lang="en">Back to Projects</span>
        <span data-lang="ko">프로젝트 목록으로</span>
      </a>
    </footer>
  </article>
</BaseLayout>

<style>
  .project-detail {
    max-width: 800px;
    margin: 0 auto;
    padding: 3rem 1.5rem;
  }

  .project-header {
    margin-bottom: 3rem;
    padding-bottom: 2rem;
    border-bottom: 2px solid #e5e7eb;
  }

  .project-meta-top {
    display: flex;
    align-items: center;
    gap: 1rem;
    margin-bottom: 1.5rem;
  }

  .category-badge {
    padding: 0.5rem 1rem;
    background: #dbeafe;
    color: #1e40af;
    font-size: 0.875rem;
    font-weight: 600;
    border-radius: 9999px;
  }

  .project-date {
    font-size: 0.875rem;
    color: #6b7280;
  }

  .project-title-ko {
    font-size: 2.5rem;
    font-weight: 700;
    color: #1e40af;
    margin-bottom: 0.75rem;
    line-height: 1.2;
  }

  .project-title-en {
    font-size: 1.5rem;
    color: #6b7280;
    font-style: italic;
    margin-bottom: 1.5rem;
  }

  .project-subtitle {
    margin-bottom: 1.5rem;
    padding: 1rem;
    background: #f9fafb;
    border-left: 4px solid #2563eb;
    border-radius: 0.25rem;
  }

  .subtitle-ko {
    font-size: 1.125rem;
    font-weight: 600;
    color: #1f2937;
    margin-bottom: 0.5rem;
  }

  .subtitle-en {
    font-size: 1rem;
    color: #6b7280;
    font-style: italic;
  }

  .conference-info {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    padding: 1rem;
    background: #fef3c7;
    border-left: 4px solid #f59e0b;
    border-radius: 0.25rem;
    margin-bottom: 1.5rem;
  }

  .conference-info svg {
    flex-shrink: 0;
    color: #f59e0b;
  }

  .conference-ko {
    display: block;
    font-weight: 600;
    color: #92400e;
  }

  .conference-en {
    display: block;
    font-size: 0.875rem;
    color: #78350f;
    font-style: italic;
  }

  .project-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .tag {
    padding: 0.25rem 0.75rem;
    background: #f3f4f6;
    color: #4b5563;
    font-size: 0.875rem;
    border-radius: 0.25rem;
  }

  .project-content {
    font-size: 1.0625rem;
    line-height: 1.75;
    color: #374151;
  }

  .project-content :global(h2) {
    font-size: 1.875rem;
    font-weight: 700;
    color: #1e40af;
    margin-top: 2.5rem;
    margin-bottom: 1rem;
  }

  .project-content :global(h3) {
    font-size: 1.5rem;
    font-weight: 600;
    color: #1f2937;
    margin-top: 2rem;
    margin-bottom: 0.75rem;
  }

  .project-content :global(h4) {
    font-size: 1.25rem;
    font-weight: 600;
    color: #374151;
    margin-top: 1.5rem;
    margin-bottom: 0.5rem;
  }

  .project-content :global(p) {
    margin-bottom: 1.25rem;
  }

  .project-content :global(ul),
  .project-content :global(ol) {
    margin-bottom: 1.25rem;
    padding-left: 1.5rem;
  }

  .project-content :global(li) {
    margin-bottom: 0.5rem;
  }

  .project-content :global(code) {
    background: #f3f4f6;
    padding: 0.125rem 0.375rem;
    border-radius: 0.25rem;
    font-size: 0.9375rem;
    font-family: 'Monaco', 'Courier New', monospace;
  }

  .project-content :global(pre) {
    background: #1f2937;
    color: #f9fafb;
    padding: 1.5rem;
    border-radius: 0.5rem;
    overflow-x: auto;
    margin-bottom: 1.5rem;
  }

  .project-content :global(pre code) {
    background: none;
    padding: 0;
    color: inherit;
  }

  .project-content :global(blockquote) {
    border-left: 4px solid #2563eb;
    padding-left: 1rem;
    margin: 1.5rem 0;
    color: #6b7280;
    font-style: italic;
  }

  .project-content :global(strong) {
    font-weight: 600;
    color: #1f2937;
  }

  .project-content :global(a) {
    color: #2563eb;
    text-decoration: underline;
  }

  .project-content :global(a:hover) {
    color: #1e40af;
  }

  .project-footer {
    margin-top: 3rem;
    padding-top: 2rem;
    border-top: 2px solid #e5e7eb;
  }

  .back-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    color: #2563eb;
    text-decoration: none;
    font-weight: 600;
    transition: all 0.2s;
  }

  .back-link:hover {
    color: #1e40af;
    gap: 0.75rem;
  }

  .back-link svg {
    transition: transform 0.2s;
  }

  .back-link:hover svg {
    transform: translateX(-4px);
  }

  @media (max-width: 768px) {
    .project-title-ko {
      font-size: 2rem;
    }

    .project-title-en {
      font-size: 1.25rem;
    }

    .project-content {
      font-size: 1rem;
    }
  }
</style>
