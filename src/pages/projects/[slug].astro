---
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';
import LineChart from '../../components/LineChart.astro';
import PieChart from '../../components/PieChart.astro';
import SocialShare from '../../components/SocialShare.astro';

export async function getStaticPaths() {
  const projects = await getCollection('projects');
  return projects.map(project => ({
    params: { slug: project.slug },
    props: { project },
  }));
}

const { project } = Astro.props;
const { Content } = await project.render();
const { data } = project;
const showCharts = project.slug === 'broadcasting-revenue-2015-2024';

// Chart data
const revenueLabels = ['2015', '2016', '2017', '2018', '2019', '2020', '2021', '2022', '2023', '2024'];
const revenueDatasets = [
  {
    label: 'Pay-TV Subscriptions',
    data: [27.5, 28.3, 29.4, 31.2, 32.4, 33.5, 36.5, 37.1, 37.3, 37.6],
    borderColor: 'rgba(102, 126, 234, 1)',
    backgroundColor: 'rgba(102, 126, 234, 0.1)',
    borderWidth: 3,
    fill: true,
    tension: 0.4
  },
  {
    label: 'Broadcasting Advertising',
    data: [35.0, 34.6, 31.8, 32.4, 33.0, 31.4, 31.0, 28.8, 25.0, 22.9],
    borderColor: 'rgba(239, 68, 68, 1)',
    backgroundColor: 'rgba(239, 68, 68, 0.1)',
    borderWidth: 3,
    fill: true,
    tension: 0.4
  },
  {
    label: 'Home Shopping Fees',
    data: [0, 0, 24.4, 24.0, 23.7, 23.5, 22.0, 21.5, 20.5, 20.2],
    borderColor: 'rgba(245, 158, 11, 1)',
    backgroundColor: 'rgba(245, 158, 11, 0.1)',
    borderWidth: 3,
    fill: true,
    tension: 0.4
  }
];

const pieData = {
  labels: ['Pay-TV Subscriptions', 'Broadcasting Advertising', 'Home Shopping Fees', 'Program Sales', 'Government Subsidy', 'Other'],
  datasets: [{
    data: [37.6, 22.9, 20.2, 9.5, 2.8, 7.0],
    backgroundColor: [
      'rgba(102, 126, 234, 0.8)',
      'rgba(239, 68, 68, 0.8)',
      'rgba(245, 158, 11, 0.8)',
      'rgba(16, 185, 129, 0.8)',
      'rgba(139, 92, 246, 0.8)',
      'rgba(107, 114, 128, 0.8)'
    ],
    borderColor: '#ffffff',
    borderWidth: 2
  }]
};

// Language support - get Korean versions if available
const titleEn = data.title_en || data.title;
const titleKo = data.title_ko || data.title;
const subtitleEn = data.subtitle_en || data.subtitle || '';
const subtitleKo = data.subtitle_ko || data.subtitle || '';
const conferenceEn = data.conference_en || data.conference || '';
const conferenceKo = data.conference_ko || data.conference || '';
const summaryEn = data.summary || '';
const summaryKo = data.summary_ko || data.summary || '';
const keyFindingsEn = data.key_findings || [];
const keyFindingsKo = data.key_findings_ko || data.key_findings || [];
---

<BaseLayout title={data.title}>
  <article class="project-detail">
    <header class="project-header">
      <div class="header-content">
        <span class="category-badge">{data.category}</span>
        <h1>
          <span class="lang-content" data-lang="en">{titleEn}</span>
          <span class="lang-content" data-lang="ko">{titleKo}</span>
        </h1>
        {(subtitleEn || subtitleKo) && (
          <p class="subtitle">
            <span class="lang-content" data-lang="en">{subtitleEn}</span>
            <span class="lang-content" data-lang="ko">{subtitleKo}</span>
          </p>
        )}
        
        <div class="meta-info">
          <time datetime={data.date}>{new Date(data.date).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}</time>
          {(conferenceEn || conferenceKo) && (
            <span class="conference">
              <span class="lang-content" data-lang="en">{conferenceEn}</span>
              <span class="lang-content" data-lang="ko">{conferenceKo}</span>
            </span>
          )}
        </div>

        <div class="tags">
          {data.tags.map((tag: string) => (
            <span class="tag">{tag}</span>
          ))}
        </div>
      </div>
    </header>

    {/* Summary Box */}
    {(summaryEn || summaryKo) && (
      <div class="summary-box">
        <h3>
          <span class="lang-content" data-lang="en">Executive Summary</span>
          <span class="lang-content" data-lang="ko">핵심 요약</span>
        </h3>
        <p>
          <span class="lang-content" data-lang="en">{summaryEn}</span>
          <span class="lang-content" data-lang="ko">{summaryKo}</span>
        </p>
      </div>
    )}

    {/* Key Findings Box */}
    {(keyFindingsEn.length > 0 || keyFindingsKo.length > 0) && (
      <div class="key-findings-box">
        <h3>
          <span class="lang-content" data-lang="en">Key Findings</span>
          <span class="lang-content" data-lang="ko">주요 발견</span>
        </h3>
        <ul class="lang-content" data-lang="en">
          {keyFindingsEn.map((finding: string) => (
            <li>{finding}</li>
          ))}
        </ul>
        <ul class="lang-content" data-lang="ko">
          {keyFindingsKo.map((finding: string) => (
            <li>{finding}</li>
          ))}
        </ul>
      </div>
    )}

    <div class="content-wrapper">
      <div class="project-content">
        <Content />
      </div>
      
      {showCharts && (
        <aside class="charts-sidebar">
          <div class="chart-card">
            <h3>Revenue Trends (2015-2024)</h3>
            <LineChart 
              id="revenueChart"
              labels={revenueLabels}
              datasets={revenueDatasets}
              yAxisLabel="Trillion KRW"
            />
          </div>
          
          <div class="chart-card">
            <h3>Revenue Composition 2024</h3>
            <PieChart 
              id="compositionChart"
              data={pieData}
            />
          </div>
        </aside>
      )}
    </div>

    {data.methodology && data.methodology.length > 0 && (
      <section class="methodology-section">
        <h2>Methodology</h2>
        <div class="methodology-tags">
          {data.methodology.map((method: string) => (
            <span class="method-tag">{method}</span>
          ))}
        </div>
      </section>
    )}

    {data.data_sources && data.data_sources.length > 0 && (
      <section class="sources-section">
        <h2>Data Sources</h2>
        <ul class="sources-list">
          {data.data_sources.map((source: { name: string; type: string }) => (
            <li>
              <span class="source-name">{source.name}</span>
              <span class={`source-type ${source.type}`}>{source.type}</span>
            </li>
          ))}
        </ul>
      </section>
    )}

    <SocialShare title={data.title} />
  </article>
</BaseLayout>

<style>
  .project-detail {
    max-width: 1200px;
    margin: 0 auto;
    padding: 2rem;
  }

  .project-header {
    margin-bottom: 3rem;
    padding-bottom: 2rem;
    border-bottom: 2px solid var(--color-border);
  }

  .header-content {
    max-width: 800px;
  }

  .category-badge {
    display: inline-block;
    padding: 0.25rem 0.75rem;
    background: var(--color-primary);
    color: white;
    border-radius: 20px;
    font-size: 0.875rem;
    font-weight: 500;
    margin-bottom: 1rem;
  }

  h1 {
    font-size: 2.5rem;
    line-height: 1.2;
    margin-bottom: 1rem;
    color: var(--color-text-primary);
  }

  .subtitle {
    font-size: 1.25rem;
    color: var(--color-text-secondary);
    margin-bottom: 1.5rem;
    line-height: 1.6;
  }

  .meta-info {
    display: flex;
    gap: 1.5rem;
    margin-bottom: 1rem;
    color: var(--color-text-tertiary);
    font-size: 0.95rem;
  }

  .conference {
    padding-left: 1.5rem;
    border-left: 1px solid var(--color-border);
  }

  .tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .tag {
    padding: 0.25rem 0.75rem;
    background: var(--color-bg-secondary);
    border-radius: 20px;
    font-size: 0.875rem;
    color: var(--color-text-secondary);
  }

  /* Summary Box */
  .summary-box {
    background: linear-gradient(135deg, #eff6ff 0%, #dbeafe 100%);
    border: 1px solid #3b82f6;
    border-radius: 12px;
    padding: 1.5rem 2rem;
    margin-bottom: 2rem;
  }

  .summary-box h3 {
    color: #1e40af;
    margin-bottom: 0.75rem;
    font-size: 1.1rem;
  }

  .summary-box p {
    color: #1e3a8a;
    line-height: 1.7;
    margin: 0;
  }

  /* Key Findings Box */
  .key-findings-box {
    background: linear-gradient(135deg, #ecfdf5 0%, #d1fae5 100%);
    border: 1px solid #10b981;
    border-radius: 12px;
    padding: 1.5rem 2rem;
    margin-bottom: 2rem;
  }

  .key-findings-box h3 {
    color: #065f46;
    margin-bottom: 0.75rem;
    font-size: 1.1rem;
  }

  .key-findings-box ul {
    margin: 0;
    padding-left: 1.25rem;
  }

  .key-findings-box li {
    color: #064e3b;
    line-height: 1.6;
    margin-bottom: 0.5rem;
  }

  .key-findings-box li:last-child {
    margin-bottom: 0;
  }

  /* Language switching */
  .lang-content[data-lang="ko"] {
    display: none;
  }

  .lang-content[data-lang="en"] {
    display: inline;
  }

  ul.lang-content[data-lang="en"],
  ul.lang-content[data-lang="ko"] {
    display: none;
  }

  ul.lang-content[data-lang="en"] {
    display: block;
  }

  :global([data-language="ko"]) .lang-content[data-lang="ko"] {
    display: inline;
  }

  :global([data-language="ko"]) .lang-content[data-lang="en"] {
    display: none;
  }

  :global([data-language="ko"]) ul.lang-content[data-lang="ko"] {
    display: block;
  }

  :global([data-language="ko"]) ul.lang-content[data-lang="en"] {
    display: none;
  }

  .content-wrapper {
    display: grid;
    grid-template-columns: 1fr;
    gap: 2rem;
  }

  @media (min-width: 1024px) {
    .content-wrapper.with-charts {
      grid-template-columns: 1fr 400px;
    }
  }

  .project-content {
    line-height: 1.8;
    color: var(--color-text-primary);
  }

  .project-content :global(h2) {
    font-size: 1.75rem;
    margin-top: 3rem;
    margin-bottom: 1rem;
    color: var(--color-text-primary);
  }

  .project-content :global(h3) {
    font-size: 1.25rem;
    margin-top: 2rem;
    margin-bottom: 0.75rem;
    color: var(--color-text-primary);
  }

  .project-content :global(p) {
    margin-bottom: 1.5rem;
  }

  .project-content :global(ul), .project-content :global(ol) {
    margin-bottom: 1.5rem;
    padding-left: 1.5rem;
  }

  .project-content :global(li) {
    margin-bottom: 0.5rem;
  }

  .project-content :global(blockquote) {
    border-left: 4px solid var(--color-primary);
    padding-left: 1.5rem;
    margin: 2rem 0;
    font-style: italic;
    color: var(--color-text-secondary);
  }

  /* Table with horizontal scroll wrapper */
  .project-content :global(table) {
    width: 100%;
    border-collapse: collapse;
    margin: 2rem 0;
    display: block;
    overflow-x: auto;
    -webkit-overflow-scrolling: touch;
  }

  .project-content :global(thead),
  .project-content :global(tbody),
  .project-content :global(tr) {
    display: table;
    width: 100%;
    table-layout: fixed;
  }

  .project-content :global(th), .project-content :global(td) {
    padding: 0.75rem 1rem;
    border: 1px solid var(--color-border);
    text-align: left;
    min-width: 120px;
  }

  .project-content :global(th) {
    background: var(--color-bg-secondary);
    font-weight: 600;
  }

  .charts-sidebar {
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }

  .chart-card {
    background: var(--color-bg-primary);
    border: 1px solid var(--color-border);
    border-radius: 12px;
    padding: 1.5rem;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
  }

  .chart-card h3 {
    font-size: 1rem;
    margin-bottom: 1rem;
    color: var(--color-text-primary);
  }

  .methodology-section, .sources-section {
    margin-top: 3rem;
    padding-top: 2rem;
    border-top: 1px solid var(--color-border);
  }

  .methodology-section h2, .sources-section h2 {
    font-size: 1.5rem;
    margin-bottom: 1rem;
  }

  .methodology-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .method-tag {
    padding: 0.5rem 1rem;
    background: linear-gradient(135deg, var(--color-primary), var(--color-secondary));
    color: white;
    border-radius: 20px;
    font-size: 0.875rem;
  }

  .sources-list {
    list-style: none;
    padding: 0;
  }

  .sources-list li {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0.75rem 0;
    border-bottom: 1px solid var(--color-border);
  }

  .source-type {
    padding: 0.25rem 0.75rem;
    border-radius: 20px;
    font-size: 0.75rem;
    text-transform: uppercase;
  }

  .source-type.primary {
    background: rgba(16, 185, 129, 0.1);
    color: #059669;
  }

  .source-type.secondary {
    background: rgba(59, 130, 246, 0.1);
    color: #2563eb;
  }

  /* Tablet */
  @media (max-width: 1024px) {
    .project-detail {
      padding: 1.5rem;
    }

    h1 {
      font-size: 2rem;
    }

    .content-wrapper.with-charts {
      grid-template-columns: 1fr;
    }

    .charts-sidebar {
      flex-direction: row;
      overflow-x: auto;
      gap: 1.5rem;
    }

    .chart-card {
      min-width: 300px;
    }
  }

  /* Mobile */
  @media (max-width: 768px) {
    .project-detail {
      padding: 1rem;
    }

    .project-header {
      margin-bottom: 2rem;
      padding-bottom: 1.5rem;
    }

    h1 {
      font-size: 1.5rem;
      line-height: 1.3;
    }

    .subtitle {
      font-size: 1rem;
      line-height: 1.5;
    }

    .meta-info {
      flex-direction: column;
      gap: 0.5rem;
      font-size: 0.875rem;
    }

    .conference {
      padding-left: 0;
      border-left: none;
    }

    .summary-box,
    .key-findings-box {
      padding: 1.25rem 1.5rem;
      margin-bottom: 1.5rem;
    }

    .summary-box h3,
    .key-findings-box h3 {
      font-size: 1rem;
    }

    .project-content :global(h2) {
      font-size: 1.5rem;
      margin-top: 2rem;
    }

    .project-content :global(h3) {
      font-size: 1.125rem;
      margin-top: 1.5rem;
    }

    .project-content :global(th),
    .project-content :global(td) {
      padding: 0.5rem 0.75rem;
      font-size: 0.875rem;
      min-width: 100px;
    }

    .charts-sidebar {
      flex-direction: column;
    }

    .chart-card {
      min-width: auto;
      padding: 1.25rem;
    }
  }

  /* Small Mobile */
  @media (max-width: 640px) {
    .project-detail {
      padding: 0.75rem;
    }

    h1 {
      font-size: 1.375rem;
    }

    .subtitle {
      font-size: 0.9375rem;
    }

    .category-badge {
      font-size: 0.75rem;
      padding: 0.2rem 0.625rem;
    }

    .summary-box,
    .key-findings-box {
      padding: 1rem;
    }

    .project-content :global(th),
    .project-content :global(td) {
      padding: 0.4rem 0.5rem;
      font-size: 0.8125rem;
      min-width: 80px;
    }
  }
</style>

<script>
  // Initialize language on page load
  function initLanguage() {
    const savedLang = localStorage.getItem('preferredLanguage') || 'en';
    document.documentElement.setAttribute('data-language', savedLang);
  }

  // Run on initial load
  initLanguage();

  // Listen for language changes
  document.addEventListener('languagechange', (e: Event) => {
    const customEvent = e as CustomEvent;
    if (customEvent.detail && customEvent.detail.language) {
      document.documentElement.setAttribute('data-language', customEvent.detail.language);
    }
  });

  // Re-initialize on Astro page transitions
  document.addEventListener('astro:page-load', initLanguage);
</script>
