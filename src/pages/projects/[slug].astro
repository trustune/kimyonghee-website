---
import { getCollection, render } from "astro:content";
import BaseLayout from "../../layouts/BaseLayout.astro";

export async function getStaticPaths() {
  const projects = await getCollection("projects");
  return projects.map((project) => ({
    params: { slug: project.id },
    props: { project },
  }));
}

const { project } = Astro.props;
const { Content } = await render(project);
const { data } = project;
---

<BaseLayout title={data.title_en || data.title}>
  <article class="project-detail">
    <header class="project-header">
      <h1>{data.title_en || data.title}</h1>
      {(data.subtitle_en || data.subtitle) && <p class="subtitle">{data.subtitle_en || data.subtitle}</p>}

      <div class="meta-info">
        <time datetime={data.date instanceof Date ? data.date.toISOString() : data.date}>
          {
            new Date(data.date).toLocaleDateString("en-US", {
              year: "numeric",
              month: "long",
              day: "numeric",
            })
          }
        </time>
        {
          (data.conference_en || data.conference) && (
            <>
              <span class="meta-separator">·</span>
              <span>{data.conference_en || data.conference}</span>
            </>
          )
        }
      </div>
    </header>

    {
      (data.summary_en || data.summary) && (
        <section class="summary-section">
          <h2>Summary</h2>
          <p>{data.summary_en || data.summary}</p>
        </section>
      )
    }

    {
      data.key_findings && data.key_findings.length > 0 && (
        <section class="findings-section">
          <h2>Key Findings</h2>
          <ul>
            {data.key_findings.map((finding: string) => (
              <li>{finding}</li>
            ))}
          </ul>
        </section>
      )
    }

    <div class="project-content">
      <Content />
    </div>

    {
      data.methodology && data.methodology.length > 0 && (
        <section class="methodology-section">
          <h2>Methodology</h2>
          <ul>
            {data.methodology.map((method: string) => (
              <li>{method}</li>
            ))}
          </ul>
        </section>
      )
    }

    {
      data.data_sources && data.data_sources.length > 0 && (
        <section class="sources-section">
          <h2>Data Sources</h2>
          <ul>
            {data.data_sources.map((source: { name: string; type: string }) => (
              <li>
                {source.name} <em>({source.type})</em>
              </li>
            ))}
          </ul>
        </section>
      )
    }

    <footer class="project-footer">
      <a href="/projects" class="back-link">← Back to Projects</a>
    </footer>
  </article>
</BaseLayout>

<style>
  .project-detail {
    max-width: var(--max-width);
    margin: 0 auto;
    padding: 0 2rem;
  }

  .project-header {
    margin-bottom: 3rem;
    padding-bottom: 2rem;
    border-bottom: 1px solid var(--color-border);
  }

  .project-header h1 {
    font-size: 1.625rem;
    margin-bottom: 0.75rem;
    margin-top: 0;
  }

  .subtitle {
    font-size: 0.875rem;
    color: var(--color-text-secondary);
    margin-bottom: 1rem;
    line-height: 1.6;
  }

  .meta-info {
    font-size: 0.75rem;
    color: var(--color-text-secondary);
  }

  .meta-separator {
    margin: 0 0.5rem;
  }

  .summary-section,
  .findings-section,
  .methodology-section,
  .sources-section {
    margin-bottom: 3rem;
  }

  .summary-section h2,
  .findings-section h2,
  .methodology-section h2,
  .sources-section h2 {
    font-size: 1.125rem;
    margin-bottom: 0.75rem;
  }

  .summary-section p {
    line-height: 1.8;
  }

  .findings-section ul,
  .methodology-section ul,
  .sources-section ul {
    list-style: disc;
    padding-left: 2rem;
    line-height: 1.8;
  }

  .findings-section li,
  .methodology-section li,
  .sources-section li {
    margin-bottom: 0.75rem;
  }

  .project-content {
    font-size: 0.9375rem;
    line-height: 1.7;
    margin-bottom: 2.5rem;
    overflow-wrap: break-word;
    word-wrap: break-word;
  }

  .project-content img {
    max-width: 100%;
    height: auto;
    margin: 1.5rem 0;
    border-radius: 4px;
  }

  .project-content h2 {
    font-size: 1.25rem;
    margin-top: 2rem;
    margin-bottom: 0.75rem;
  }

  .project-content h3 {
    font-size: 1.0625rem;
    margin-top: 1.5rem;
    margin-bottom: 0.5rem;
  }

  .project-content p {
    margin-bottom: 1.5rem;
  }

  .project-content ul,
  .project-content ol {
    margin: 1.5rem 0;
    padding-left: 2rem;
  }

  .project-content li {
    margin-bottom: 0.5rem;
  }

  .project-content table {
    width: 100%;
    border-collapse: collapse;
    margin: 2rem 0;
  }

  .project-content th,
  .project-content td {
    padding: 0.5rem 0.75rem;
    border: 1px solid var(--color-border);
    text-align: left;
    font-size: 0.8125rem;
  }

  .project-content th {
    background: var(--color-bg-secondary);
    font-weight: 600;
  }

  .project-footer {
    margin-top: 4rem;
    padding-top: 2rem;
    border-top: 1px solid var(--color-border);
  }

  .back-link {
    color: var(--color-link);
    text-decoration: none;
  }

  .back-link:hover {
    text-decoration: underline;
  }

  /* Hide Korean-only content in project body */
  .project-content [data-lang="ko"],
  .project-content h2[data-lang="ko"],
  .project-content h3[data-lang="ko"],
  .project-content p[data-lang="ko"],
  .project-content ul[data-lang="ko"],
  .project-content li[data-lang="ko"],
  .project-content blockquote[data-lang="ko"] {
    display: none;
  }

  @media (max-width: 768px) {
    .project-detail {
      padding: 0 1rem;
    }

    .project-header h1 {
      font-size: 1.375rem;
    }

    .project-content {
      font-size: 0.875rem;
    }
  }
</style>
