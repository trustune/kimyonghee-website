---
import BaseLayout from '../layouts/BaseLayout.astro';

const popularPages = [
  { title: 'Research & Publications', href: '/research/publications', description: 'View all research papers and publications' },
  { title: 'Projects', href: '/projects', description: 'Explore research projects and analysis' },
  { title: 'About', href: '/about', description: 'Learn more about my background and experience' },
  { title: 'Writing', href: '/writing', description: 'Read latest posts and insights' },
  { title: 'Teaching', href: '/teaching', description: 'View courses and teaching materials' },
  { title: 'Search', href: '/search', description: 'Search across all content' },
];
---

<BaseLayout title="404 - Page Not Found">
  <div class="not-found-page">
    <div class="not-found-content">
      <div class="not-found-header">
        <h1 class="not-found-title">404</h1>
        <h2 class="not-found-subtitle">Page Not Found</h2>
        <p class="not-found-description">
          The page you're looking for doesn't exist or has been moved.
        </p>
      </div>

      <div class="not-found-search">
        <h3 class="search-title">Try searching:</h3>
        <div class="search-box">
          <input
            type="search"
            id="search-input"
            placeholder="Search for pages..."
            class="search-input"
          />
          <svg class="search-icon" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <circle cx="11" cy="11" r="8"/>
            <path d="m21 21-4.35-4.35"/>
          </svg>
        </div>
        <div id="search-results" class="search-results"></div>
      </div>

      <div class="popular-pages">
        <h3 class="popular-title">Popular Pages</h3>
        <div class="popular-grid">
          {popularPages.map(page => (
            <a href={page.href} class="popular-card">
              <h4 class="popular-card-title">{page.title}</h4>
              <p class="popular-card-description">{page.description}</p>
            </a>
          ))}
        </div>
      </div>

      <div class="not-found-actions">
        <a href="/" class="btn-primary">Go to Homepage</a>
        <a href="/projects" class="btn-secondary">View Projects</a>
      </div>
    </div>
  </div>
</BaseLayout>

<style>
  .not-found-page {
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: var(--space-8);
    background: var(--color-bg);
  }

  .not-found-content {
    max-width: var(--container-max);
    width: 100%;
  }

  .not-found-header {
    text-align: center;
    margin-bottom: var(--space-12);
  }

  .not-found-title {
    font-family: var(--font-serif);
    font-size: 8rem;
    font-weight: 400;
    color: var(--color-text-muted);
    margin-bottom: var(--space-4);
    line-height: 1;
  }

  .not-found-subtitle {
    font-family: var(--font-serif);
    font-size: var(--step-3);
    font-weight: 400;
    color: var(--color-text);
    margin-bottom: var(--space-4);
  }

  .not-found-description {
    font-size: var(--step-0);
    color: var(--color-text-secondary);
  }

  .not-found-search {
    background: var(--color-surface);
    padding: var(--space-8);
    border-radius: var(--border-radius);
    border: 1px solid var(--color-border);
    margin-bottom: var(--space-8);
  }

  .search-title {
    font-size: var(--step-0);
    font-weight: 600;
    color: var(--color-text);
    margin-bottom: var(--space-4);
  }

  .search-box {
    position: relative;
  }

  .search-input {
    width: 100%;
    padding: var(--space-3) var(--space-4) var(--space-3) var(--space-12);
    border: 1px solid var(--color-border);
    border-radius: var(--border-radius);
    font-size: var(--step-0);
    background: var(--color-bg);
    color: var(--color-text);
    transition: border-color var(--transition-fast);
  }

  .search-input:focus {
    outline: none;
    border-color: var(--color-accent);
  }

  .search-icon {
    position: absolute;
    left: var(--space-4);
    top: 50%;
    transform: translateY(-50%);
    color: var(--color-text-muted);
  }

  .search-results {
    margin-top: var(--space-4);
  }

  .search-result {
    padding: var(--space-3);
    border-radius: var(--border-radius);
    transition: background var(--transition-fast);
  }

  .search-result:hover {
    background: var(--color-border-light);
  }

  .search-result a {
    color: var(--color-accent);
    text-decoration: none;
    font-weight: 500;
  }

  .popular-pages {
    margin-bottom: var(--space-8);
  }

  .popular-title {
    font-size: var(--step-1);
    font-weight: 400;
    color: var(--color-text);
    margin-bottom: var(--space-4);
  }

  .popular-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: var(--space-4);
  }

  .popular-card {
    padding: var(--space-6);
    background: var(--color-bg);
    border: 1px solid var(--color-border);
    border-radius: var(--border-radius);
    text-decoration: none;
    transition: border-color var(--transition-fast);
  }

  .popular-card:hover {
    border-color: var(--color-accent);
  }

  .popular-card-title {
    font-size: var(--step-0);
    font-weight: 600;
    color: var(--color-text);
    margin-bottom: var(--space-2);
  }

  .popular-card-description {
    font-size: 0.875rem;
    color: var(--color-text-secondary);
    margin: 0;
  }

  .not-found-actions {
    display: flex;
    gap: var(--space-4);
    justify-content: center;
  }

  .btn-primary, .btn-secondary {
    padding: var(--space-3) var(--space-6);
    border-radius: var(--border-radius);
    font-weight: 600;
    text-decoration: none;
    transition: all var(--transition-fast);
    font-size: 0.9375rem;
  }

  .btn-primary {
    background: var(--color-accent);
    color: #fff;
  }

  .btn-primary:hover {
    background: var(--color-accent-hover);
    color: #fff;
  }

  .btn-secondary {
    background: transparent;
    color: var(--color-accent);
    border: 1px solid var(--color-accent);
  }

  .btn-secondary:hover {
    background: var(--color-accent-light);
    color: var(--color-accent);
  }
</style>

<script>
  // Simple search functionality
  const searchInput = document.getElementById('search-input') as HTMLInputElement;
  const searchResults = document.getElementById('search-results');

  const pages = [
    { title: 'Home', url: '/' },
    { title: 'About', url: '/about' },
    { title: 'CV', url: '/cv' },
    { title: 'Research & Publications', url: '/research/publications' },
    { title: 'Projects', url: '/projects' },
    { title: 'Netflix Korea Economic Impact', url: '/projects/netflix-korea-economic-impact-2024' },
    { title: 'Broadcasting Revenue Analysis', url: '/projects/broadcasting-revenue-2015-2024' },
    { title: 'MyData Policy', url: '/projects/mydata-right-transfer-policy-2025' },
    { title: 'Writing', url: '/writing' },
    { title: 'Teaching', url: '/teaching' },
    { title: 'Search', url: '/search' },
  ];

  searchInput?.addEventListener('input', (e) => {
    const query = (e.target as HTMLInputElement).value.toLowerCase();

    if (!query || !searchResults) {
      searchResults.innerHTML = '';
      return;
    }

    const results = pages.filter(page =>
      page.title.toLowerCase().includes(query)
    );

    if (results.length > 0) {
      searchResults.innerHTML = results.map(page => `
        <div class="search-result">
          <a href="${page.url}">${page.title}</a>
        </div>
      `).join('');
    } else {
      searchResults.innerHTML = `<div class="search-result">No results found</div>`;
    }
  });
</script>
