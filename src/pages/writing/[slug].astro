---
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';
import SocialShare from '../../components/SocialShare.astro';

export async function getStaticPaths() {
  const blogEntries = await getCollection('blog');
  return blogEntries.map(entry => ({
    params: { slug: entry.slug },
    props: { entry },
  }));
}

const { entry } = Astro.props;
const { Content } = await entry.render();
const { title, title_en, excerpt, excerpt_en, date, category, tags, image, author, enableShare } = entry.data;

const formattedDate = new Date(date).toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric'
});

const currentUrl = `https://kimyonghee.com/writing/${entry.slug}`;
const fullImageUrl = image ? `https://kimyonghee.com${image}` : '';
---

<BaseLayout title={`${title_en || title} | Yonghee Kim`} description={excerpt_en || excerpt} image={fullImageUrl} url={currentUrl}>
  <article class="blog-post">
    <header class="post-header">
      <div class="back-link">
        <a href="/writing">&larr; Back to Writing</a>
      </div>

      {image && (
        <img
          src={image}
          alt={title_en || title}
          class="post-hero-image"
        />
      )}

      <div class="post-meta">
        <span>{formattedDate}</span>
        <span class="meta-sep">&middot;</span>
        <span>{category}</span>
        <span class="meta-sep">&middot;</span>
        <span>by {author}</span>
      </div>

      <h1 class="post-title">{title_en || title}</h1>

      {tags && tags.length > 0 && (
        <div class="post-tags">
          {tags.map((tag) => (
            <span class="post-tag">#{tag}</span>
          ))}
        </div>
      )}
    </header>

    <div class="prose">
      <Content />
    </div>

    {enableShare && (
      <div class="share-section">
        <SocialShare
          title={title_en || title}
          url={currentUrl}
          excerpt={excerpt_en || excerpt}
          image={fullImageUrl}
        />
      </div>
    )}

    <footer class="post-footer">
      <a href="/writing">&larr; Back to all writing</a>
    </footer>
  </article>
</BaseLayout>

<style>
  .blog-post {
    max-width: 800px;
    margin: 0 auto;
    padding: var(--space-12) var(--space-4);
  }

  .post-header {
    margin-bottom: var(--space-12);
  }

  .back-link {
    margin-bottom: var(--space-6);
  }

  .back-link a {
    color: var(--color-accent);
    text-decoration: none;
    font-size: 0.9375rem;
    transition: color var(--transition-fast);
  }

  .back-link a:hover {
    color: var(--color-accent-hover);
  }

  .post-hero-image {
    width: 100%;
    height: auto;
    max-height: 400px;
    object-fit: cover;
    border-radius: var(--border-radius);
    margin-bottom: var(--space-8);
  }

  .post-meta {
    display: flex;
    gap: var(--space-3);
    margin-bottom: var(--space-4);
    font-size: 0.875rem;
    color: var(--color-text-muted);
  }

  .meta-sep {
    color: var(--color-border);
  }

  .post-title {
    font-family: var(--font-serif);
    font-size: var(--step-3);
    font-weight: 400;
    line-height: 1.2;
    color: var(--color-text);
    margin: 0 0 var(--space-6) 0;
  }

  .post-tags {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-2);
  }

  .post-tag {
    background: var(--color-surface);
    border: 1px solid var(--color-border-light);
    padding: var(--space-1) var(--space-3);
    border-radius: var(--border-radius);
    font-size: 0.8125rem;
    color: var(--color-text-secondary);
  }

  /* Prose */
  .prose {
    line-height: 1.8;
    color: var(--color-text);
    font-size: var(--step-0);
  }

  .share-section {
    margin-top: var(--space-12);
    padding-top: var(--space-8);
    border-top: 1px solid var(--color-border-light);
  }

  .post-footer {
    margin-top: var(--space-12);
    padding-top: var(--space-8);
    border-top: 1px solid var(--color-border-light);
    text-align: center;
  }

  .post-footer a {
    color: var(--color-accent);
    text-decoration: none;
    font-weight: 500;
    transition: color var(--transition-fast);
  }

  .post-footer a:hover {
    color: var(--color-accent-hover);
  }

  /* Responsive */
  @media (max-width: 768px) {
    .blog-post {
      padding: var(--space-8) var(--space-4);
    }

    .post-title {
      font-size: var(--step-2);
    }

    .post-meta {
      flex-wrap: wrap;
    }
  }

  @media (max-width: 480px) {
    .blog-post {
      padding: var(--space-6) var(--space-3);
    }
  }
</style>

<style is:global>
  .prose h2 {
    font-family: var(--font-serif);
    font-size: var(--step-2);
    font-weight: 400;
    margin-top: var(--space-12);
    margin-bottom: var(--space-4);
    color: var(--color-text);
  }

  .prose h3 {
    font-family: var(--font-serif);
    font-size: var(--step-1);
    font-weight: 400;
    margin-top: var(--space-8);
    margin-bottom: var(--space-3);
    color: var(--color-text);
  }

  .prose p {
    margin-bottom: var(--space-6);
  }

  .prose ul,
  .prose ol {
    margin: var(--space-6) 0;
    padding-left: var(--space-8);
  }

  .prose li {
    margin-bottom: var(--space-2);
  }

  .prose a {
    color: var(--color-accent);
    text-decoration: underline;
    text-underline-offset: 0.2em;
    text-decoration-thickness: 1px;
  }

  .prose a:hover {
    color: var(--color-accent-hover);
  }

  .prose img {
    width: 100%;
    border-radius: var(--border-radius);
    margin: var(--space-8) 0;
  }

  .prose strong {
    font-weight: 600;
    color: var(--color-text);
  }

  .prose code {
    background: var(--color-surface);
    padding: 0.125rem 0.375rem;
    border-radius: var(--border-radius);
    font-size: 0.875em;
    font-family: var(--font-mono);
  }

  .prose pre {
    background: var(--color-text);
    color: var(--color-bg);
    padding: var(--space-6);
    border-radius: var(--border-radius);
    overflow-x: auto;
    margin: var(--space-8) 0;
  }

  .prose pre code {
    background: transparent;
    padding: 0;
  }

  .prose blockquote {
    border-left: 3px solid var(--color-accent);
    padding-left: var(--space-6);
    margin: var(--space-8) 0;
    color: var(--color-text-secondary);
    font-style: italic;
  }
</style>
