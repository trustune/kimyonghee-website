---
import BaseLayout from '../../layouts/BaseLayout.astro';
import SocialShare from '../../components/SocialShare.astro';
import Badge from '../../components/Badge.astro';
import publicationsData from '../../data/publications.json';

export function getStaticPaths() {
  const publications = publicationsData.publications || [];
  return publications.map((pub) => ({
    params: { id: pub.id },
    props: { pub },
  }));
}

const { pub } = Astro.props;

const pageTitle = `${pub.title} - Yonghee Kim`;
const currentUrl = `https://kimyonghee.com${Astro.url.pathname}`;
---

<BaseLayout title={pageTitle}>
  <style>
    .paper-detail-container {
      max-width: 1200px;
      margin: 0 auto;
      padding: 3rem 1.5rem;
      line-height: 1.625;
    }

    /* Back Link */
    .back-link {
      display: inline-flex;
      align-items: center;
      gap: 0.5rem;
      color: #2563eb;
      text-decoration: none;
      font-size: 0.9375rem;
      font-weight: 500;
      margin-bottom: 2rem;
      transition: color 0.2s;
    }

    .back-link:hover {
      color: #1e40af;
    }

    /* Paper Header */
    .paper-header {
      margin-bottom: 2rem;
    }

    .paper-status {
      font-size: 0.8125rem;
      font-weight: 700;
      text-transform: uppercase;
      letter-spacing: 0.05em;
      color: #64748b;
      margin-bottom: 1rem;
    }

    .paper-title {
      font-family: 'Paperozi', 'Merriweather', serif;
      font-size: 2.25rem;
      font-weight: 700;
      line-height: 1.2;
      color: #1a1a1a;
      margin-bottom: 1.5rem;
      letter-spacing: -0.02em;
    }

    .paper-authors {
      font-size: 1.125rem;
      color: #4b5563;
      margin-bottom: 0.75rem;
    }

    .paper-journal {
      font-size: 1rem;
      color: #6b7280;
      font-style: italic;
      margin-bottom: 1.5rem;
    }

    /* Badges */
    .paper-badges {
      display: flex;
      gap: 0.5rem;
      margin-bottom: 2rem;
      flex-wrap: wrap;
    }

    /* Share Section */
    .share-section {
      margin: 3rem 0;
      padding-top: 2rem;
      border-top: 2px solid #e5e7eb;
    }

    /* Links Section */
    .paper-links {
      display: flex;
      gap: 1rem;
      margin-bottom: 3rem;
      flex-wrap: wrap;
    }

    .paper-link {
      display: inline-flex;
      align-items: center;
      gap: 0.5rem;
      padding: 0.75rem 1.5rem;
      background: #2563eb;
      color: white;
      text-decoration: none;
      font-size: 0.9375rem;
      font-weight: 600;
      border-radius: 6px;
      transition: all 0.2s;
    }

    .paper-link:hover {
      background: #1e40af;
      transform: translateY(-1px);
    }

    .paper-link-secondary {
      background: white;
      color: #2563eb;
      border: 2px solid #2563eb;
    }

    .paper-link-secondary:hover {
      background: #eff6ff;
      color: #1e40af;
      border-color: #1e40af;
    }

    /* Divider */
    .divider {
      border: none;
      border-top: 2px solid #e2e8f0;
      margin: 2.5rem 0;
    }

    /* Abstract Section */
    .section {
      margin-bottom: 2.5rem;
    }

    .section-title {
      font-family: 'Paperozi', 'Merriweather', serif;
      font-size: 1.875rem;
      font-weight: 400;
      color: #1f2937;
      margin-bottom: 2rem;
      padding-bottom: 0.5rem;
      border-bottom: 1px solid #e5e7eb;
    }

    .section-content {
      font-size: 1.0625rem;
      color: #374151;
      line-height: 1.7;
    }

    /* Metadata Grid */
    .metadata-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
      gap: 1.5rem;
      background: #f8fafc;
      border: 1px solid #e2e8f0;
      border-radius: 8px;
      padding: 1.5rem;
    }

    .metadata-item {
      display: flex;
      flex-direction: column;
      gap: 0.25rem;
    }

    .metadata-label {
      font-size: 0.8125rem;
      font-weight: 600;
      text-transform: uppercase;
      letter-spacing: 0.05em;
      color: #64748b;
    }

    .metadata-value {
      font-size: 1rem;
      color: #1a1a1a;
      font-weight: 500;
    }

    /* Responsive */
    @media (max-width: 640px) {
      .paper-title {
        font-size: 1.75rem;
      }

      .section-title {
        font-size: 1.25rem;
      }

      .paper-links {
        flex-direction: column;
      }

      .paper-link {
        width: 100%;
        justify-content: center;
      }
    }
  </style>

  <div class="paper-detail-container">
    <!-- Back Link -->
    <a href="/research/publications" class="back-link">
      <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <line x1="19" y1="12" x2="5" y2="12"></line>
        <polyline points="12 19 5 12 12 5"></polyline>
      </svg>
      Back to Research
    </a>

    <!-- Paper Header -->
    <header class="paper-header">
      <div class="paper-status">
        {pub.status === 'published' ? 'PUBLISHED' : pub.status?.toUpperCase()} â€¢ {pub.year}
      </div>
      <h1 class="paper-title">{pub.title}</h1>
      <p class="paper-authors">{pub.authors.join(', ')}</p>
      <p class="paper-journal">
        {pub.journal}
        {pub.volume && `, Vol. ${pub.volume}`}
        {pub.issue && `(${pub.issue})`}
        {pub.pages && `, pp. ${pub.pages}`}
      </p>
    </header>

    <!-- Badges -->
    <div class="paper-badges">
      <Badge text={pub.type.toUpperCase()} variant={pub.type} />
      {pub.impact_factor && (
        <Badge text={`IF ${pub.impact_factor}`} variant="if" />
      )}
      {pub.quartile && (
        <Badge text={pub.quartile} variant="if" />
      )}
      {pub.citations > 0 && (
        <Badge text={`${pub.citations} citations`} variant="citations" />
      )}
    </div>

    <!-- Links -->
    <div class="paper-links">
      {pub.doi && (
        <a href={`https://doi.org/${pub.doi}`} target="_blank" class="paper-link">
          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"></path>
            <polyline points="15 3 21 3 21 9"></polyline>
            <line x1="10" y1="14" x2="21" y2="3"></line>
          </svg>
          View Publication
        </a>
      )}
      {pub.pdf && (
        <a href={pub.pdf} target="_blank" class="paper-link paper-link-secondary">
          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path>
            <polyline points="14 2 14 8 20 8"></polyline>
            <line x1="16" y1="13" x2="8" y2="13"></line>
            <line x1="16" y1="17" x2="8" y2="17"></line>
            <polyline points="10 9 9 9 8 9"></polyline>
          </svg>
          Download PDF
        </a>
      )}
    </div>

    <hr class="divider" />

    <!-- Abstract -->
    {pub.abstract && (
      <section class="section">
        <h2 class="section-title">Abstract</h2>
        <div class="section-content">
          <p>{pub.abstract}</p>
        </div>
      </section>
    )}

    <!-- Metadata -->
    <section class="section">
      <h2 class="section-title">Publication Details</h2>
      <div class="metadata-grid">
        <div class="metadata-item">
          <span class="metadata-label">Journal</span>
          <span class="metadata-value">{pub.journal}</span>
        </div>
        <div class="metadata-item">
          <span class="metadata-label">Year</span>
          <span class="metadata-value">{pub.year}</span>
        </div>
        {pub.volume && (
          <div class="metadata-item">
            <span class="metadata-label">Volume</span>
            <span class="metadata-value">{pub.volume}</span>
          </div>
        )}
        {pub.issue && (
          <div class="metadata-item">
            <span class="metadata-label">Issue</span>
            <span class="metadata-value">{pub.issue}</span>
          </div>
        )}
        {pub.pages && (
          <div class="metadata-item">
            <span class="metadata-label">Pages</span>
            <span class="metadata-value">{pub.pages}</span>
          </div>
        )}
        {pub.impact_factor && (
          <div class="metadata-item">
            <span class="metadata-label">Impact Factor</span>
            <span class="metadata-value">{pub.impact_factor}</span>
          </div>
        )}
        {pub.quartile && (
          <div class="metadata-item">
            <span class="metadata-label">Quartile</span>
            <span class="metadata-value">{pub.quartile}</span>
          </div>
        )}
        {pub.doi && (
          <div class="metadata-item">
            <span class="metadata-label">DOI</span>
            <span class="metadata-value">{pub.doi}</span>
          </div>
        )}
        {pub.category && (
          <div class="metadata-item">
            <span class="metadata-label">Category</span>
            <span class="metadata-value">{pub.category}</span>
          </div>
        )}
      </div>
    </section>

    <!-- Social Share -->
    <div class="share-section">
      <SocialShare
        title={pub.title}
        url={currentUrl}
        excerpt={pub.abstract}
      />
    </div>
  </div>
</BaseLayout>
