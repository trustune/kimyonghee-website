---
import { getCollection, render } from "astro:content";
import BaseLayout from "../../layouts/BaseLayout.astro";

export async function getStaticPaths() {
  const publications = await getCollection("publications");
  return publications.map((pub) => ({
    params: { id: pub.id },
    props: { publication: pub },
  }));
}

const { publication } = Astro.props;
const { Content } = await render(publication);
const { data } = publication;
---

<BaseLayout title={`${data.title} | Yonghee Kim`} description={data.abstract}>
  <article class="publication-detail">
    <header class="pub-header">
      <div class="pub-meta-top">
        <span class="status-badge" data-status={data.status}
          >{data.status.replace("-", " ").toUpperCase()}</span
        >
        <span class="category-badge">{data.category}</span>
      </div>

      <h1 class="pub-title">{data.title}</h1>

      <div class="pub-authors">
        {data.authors.join(", ")}
      </div>

      <div class="pub-journal-info">
        <span class="journal-name">{data.journal}</span>
        {data.year && <span class="pub-year">({data.year})</span>}
        {data.volume && <span class="pub-volume">Vol. {data.volume}</span>}
        {data.issue && <span class="pub-issue">({data.issue})</span>}
        {data.pages && <span class="pub-pages">: {data.pages}</span>}
      </div>

      {
        (data.impact_factor || data.quartile || data.citations > 0) && (
          <div class="pub-metrics">
            {data.impact_factor && (
              <div class="metric">
                <span class="metric-label">Impact Factor</span>
                <span class="metric-value">{data.impact_factor}</span>
              </div>
            )}
            {data.quartile && (
              <div class="metric">
                <span class="metric-label">Quartile</span>
                <span class="metric-value">{data.quartile}</span>
              </div>
            )}
            {data.citations > 0 && (
              <div class="metric">
                <span class="metric-label">Citations</span>
                <span class="metric-value">{data.citations}</span>
              </div>
            )}
          </div>
        )
      }

      {
        data.doi && (
          <div class="pub-doi">
            <span class="doi-label">DOI:</span>
            <a
              href={`https://doi.org/${data.doi}`}
              target="_blank"
              rel="noopener noreferrer"
            >
              {data.doi}
            </a>
          </div>
        )
      }

      <div class="pub-abstract">
        <h2>Abstract</h2>
        <p>{data.abstract}</p>
      </div>
    </header>

    <div class="pub-content">
      <Content />
    </div>

    <footer class="pub-footer">
      <a href="/research/publications" class="back-link">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="20"
          height="20"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
        >
          <line x1="19" y1="12" x2="5" y2="12"></line>
          <polyline points="12 19 5 12 12 5"></polyline>
        </svg>
        Back to Publications
      </a>
    </footer>
  </article>
</BaseLayout>

<style>
  .publication-detail {
    max-width: 800px;
    margin: 0 auto;
    padding: 3rem 1.5rem;
  }

  .pub-header {
    margin-bottom: 3rem;
    padding-bottom: 2rem;
    border-bottom: 2px solid #e5e7eb;
  }

  .pub-meta-top {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    margin-bottom: 1.5rem;
  }

  .status-badge,
  .category-badge {
    padding: 0.375rem 0.875rem;
    font-size: 0.75rem;
    font-weight: 700;
    border-radius: 9999px;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .status-badge[data-status="published"] {
    background: #d1fae5;
    color: #065f46;
  }

  .status-badge[data-status="working-paper"] {
    background: #fef3c7;
    color: #92400e;
  }

  .status-badge[data-status="work-in-progress"] {
    background: #dbeafe;
    color: #1e40af;
  }

  .category-badge {
    background: #f3f4f6;
    color: #4b5563;
  }

  .pub-title {
    font-size: 2rem;
    font-weight: 700;
    color: #1e40af;
    margin-bottom: 1rem;
    line-height: 1.3;
  }

  .pub-authors {
    font-size: 1.125rem;
    color: #4b5563;
    margin-bottom: 1rem;
  }

  .pub-journal-info {
    font-size: 1rem;
    color: #6b7280;
    margin-bottom: 1.5rem;
  }

  .journal-name {
    font-weight: 600;
    color: #2563eb;
    font-style: italic;
  }

  .pub-metrics {
    display: flex;
    gap: 2rem;
    margin-bottom: 1.5rem;
    padding: 1rem;
    background: #f9fafb;
    border-radius: 0.5rem;
  }

  .metric {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }

  .metric-label {
    font-size: 0.75rem;
    color: #6b7280;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .metric-value {
    font-size: 1.5rem;
    font-weight: 700;
    color: #1e40af;
  }

  .pub-doi {
    margin-bottom: 1.5rem;
    padding: 0.75rem;
    background: #f0fdf4;
    border-left: 4px solid #10b981;
    border-radius: 0.25rem;
    font-size: 0.875rem;
  }

  .doi-label {
    font-weight: 600;
    color: #065f46;
    margin-right: 0.5rem;
  }

  .pub-doi a {
    color: #059669;
    text-decoration: none;
    font-family: "Monaco", "Courier New", monospace;
  }

  .pub-doi a:hover {
    text-decoration: underline;
  }

  .pub-abstract {
    margin-bottom: 2rem;
    padding: 1.5rem;
    background: #fffbeb;
    border-left: 4px solid #f59e0b;
    border-radius: 0.25rem;
  }

  .pub-abstract h2 {
    font-size: 1rem;
    font-weight: 700;
    color: #92400e;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-bottom: 0.75rem;
  }

  .pub-abstract p {
    font-size: 1rem;
    line-height: 1.6;
    color: #78350f;
    margin: 0;
  }

  .pub-content {
    font-size: 1.0625rem;
    line-height: 1.75;
    color: #374151;
  }

  .pub-content :global(h2) {
    font-size: 1.75rem;
    font-weight: 700;
    color: #1e40af;
    margin-top: 2.5rem;
    margin-bottom: 1rem;
  }

  .pub-content :global(h3) {
    font-size: 1.375rem;
    font-weight: 600;
    color: #1f2937;
    margin-top: 2rem;
    margin-bottom: 0.75rem;
  }

  .pub-content :global(h4) {
    font-size: 1.125rem;
    font-weight: 600;
    color: #374151;
    margin-top: 1.5rem;
    margin-bottom: 0.5rem;
  }

  .pub-content :global(p) {
    margin-bottom: 1.25rem;
  }

  .pub-content :global(ul),
  .pub-content :global(ol) {
    margin-bottom: 1.25rem;
    padding-left: 1.5rem;
  }

  .pub-content :global(li) {
    margin-bottom: 0.5rem;
  }

  .pub-content :global(strong) {
    font-weight: 600;
    color: #1f2937;
  }

  .pub-content :global(code) {
    background: #f3f4f6;
    padding: 0.125rem 0.375rem;
    border-radius: 0.25rem;
    font-size: 0.9375rem;
    font-family: "Monaco", "Courier New", monospace;
  }

  .pub-content :global(blockquote) {
    border-left: 4px solid #2563eb;
    padding-left: 1rem;
    margin: 1.5rem 0;
    color: #6b7280;
    font-style: italic;
  }

  .pub-footer {
    margin-top: 3rem;
    padding-top: 2rem;
    border-top: 2px solid #e5e7eb;
  }

  .back-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    color: #2563eb;
    text-decoration: none;
    font-weight: 600;
    transition: all 0.2s;
  }

  .back-link:hover {
    color: #1e40af;
    gap: 0.75rem;
  }

  .back-link svg {
    transition: transform 0.2s;
  }

  .back-link:hover svg {
    transform: translateX(-4px);
  }

  @media (max-width: 768px) {
    .pub-title {
      font-size: 1.5rem;
    }

    .pub-metrics {
      flex-direction: column;
      gap: 1rem;
    }

    .pub-content {
      font-size: 1rem;
    }
  }
</style>
