---
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';

export async function getStaticPaths() {
  const publications = await getCollection('publications');
  return publications.map(pub => ({
    params: { id: pub.slug },
    props: { publication: pub },
  }));
}

const { publication } = Astro.props;
const { Content } = await publication.render();
const { data } = publication;
---

<BaseLayout
  title={`${data.title} | Yonghee Kim`}
  description={data.abstract}
>
  <article class="publication-detail">
    <header class="pub-header">
      <div class="pub-meta-top">
        <span class="status-badge" data-status={data.status}>{data.status.replace('-', ' ').toUpperCase()}</span>
        <span class="category-badge">{data.category}</span>
      </div>

      <h1 class="pub-title">{data.title}</h1>

      <div class="pub-authors">
        {data.authors.join(', ')}
      </div>

      <div class="pub-journal-info">
        <span class="journal-name">{data.journal}</span>
        {data.year && <span class="pub-year">({data.year})</span>}
        {data.volume && <span class="pub-volume">Vol. {data.volume}</span>}
        {data.issue && <span class="pub-issue">({data.issue})</span>}
        {data.pages && <span class="pub-pages">: {data.pages}</span>}
      </div>

      {(data.impact_factor || data.quartile || data.citations > 0) && (
        <div class="pub-metrics">
          {data.impact_factor && (
            <div class="metric">
              <span class="metric-label">Impact Factor</span>
              <span class="metric-value">{data.impact_factor}</span>
            </div>
          )}
          {data.quartile && (
            <div class="metric">
              <span class="metric-label">Quartile</span>
              <span class="metric-value">{data.quartile}</span>
            </div>
          )}
          {data.citations > 0 && (
            <div class="metric">
              <span class="metric-label">Citations</span>
              <span class="metric-value">{data.citations}</span>
            </div>
          )}
        </div>
      )}

      {data.doi && (
        <div class="pub-doi">
          <span class="doi-label">DOI:</span>
          <a href={`https://doi.org/${data.doi}`} target="_blank" rel="noopener noreferrer">
            {data.doi}
          </a>
        </div>
      )}

      <div class="pub-abstract">
        <h2>Abstract</h2>
        <p>{data.abstract}</p>
      </div>
    </header>

    <div class="pub-content">
      <Content />
    </div>

    <footer class="pub-footer">
      <a href="/research/publications" class="back-link">
        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <line x1="19" y1="12" x2="5" y2="12"></line>
          <polyline points="12 19 5 12 12 5"></polyline>
        </svg>
        Back to Publications
      </a>
    </footer>
  </article>
</BaseLayout>

<style>
  .publication-detail {
    max-width: var(--measure-wide);
    margin: 0 auto;
    padding: var(--space-12) var(--space-6);
  }

  .pub-header {
    margin-bottom: var(--space-12);
    padding-bottom: var(--space-8);
    border-bottom: 1px solid var(--color-border);
  }

  .pub-meta-top {
    display: flex;
    align-items: center;
    gap: var(--space-3);
    margin-bottom: var(--space-6);
  }

  .status-badge,
  .category-badge {
    padding: var(--space-1) var(--space-3);
    font-size: var(--step-0);
    font-weight: 600;
    border-radius: var(--border-radius);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    font-family: var(--font-sans);
  }

  .status-badge[data-status="published"] {
    background: transparent;
    color: var(--color-accent);
    border: 1px solid var(--color-accent);
  }

  .status-badge[data-status="working-paper"] {
    background: transparent;
    color: var(--color-text-secondary);
    border: 1px solid var(--color-border);
  }

  .status-badge[data-status="work-in-progress"] {
    background: transparent;
    color: var(--color-text-muted);
    border: 1px solid var(--color-border);
  }

  .category-badge {
    background: var(--color-surface);
    color: var(--color-text-secondary);
    border: 1px solid var(--color-border-light);
  }

  .pub-title {
    font-size: var(--step-3);
    font-weight: 700;
    color: var(--color-text);
    margin-bottom: var(--space-4);
    line-height: 1.3;
    font-family: var(--font-serif);
  }

  .pub-authors {
    font-size: var(--step-1);
    color: var(--color-text-secondary);
    margin-bottom: var(--space-4);
    font-family: var(--font-sans);
  }

  .pub-journal-info {
    font-size: var(--step-0);
    color: var(--color-text-muted);
    margin-bottom: var(--space-6);
  }

  .journal-name {
    font-weight: 600;
    color: var(--color-accent);
    font-style: italic;
  }

  .pub-metrics {
    display: flex;
    gap: var(--space-8);
    margin-bottom: var(--space-6);
    padding: var(--space-4);
    background: var(--color-surface);
    border-radius: var(--border-radius);
    border: 1px solid var(--color-border-light);
  }

  .metric {
    display: flex;
    flex-direction: column;
    gap: var(--space-1);
  }

  .metric-label {
    font-size: var(--step-0);
    color: var(--color-text-muted);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    font-family: var(--font-sans);
  }

  .metric-value {
    font-size: var(--step-2);
    font-weight: 700;
    color: var(--color-text);
    font-family: var(--font-sans);
  }

  .pub-doi {
    margin-bottom: var(--space-6);
    padding: var(--space-3) var(--space-4);
    background: var(--color-surface);
    border-left: 3px solid var(--color-accent);
    border-radius: var(--border-radius);
    font-size: var(--step-0);
  }

  .doi-label {
    font-weight: 600;
    color: var(--color-text-secondary);
    margin-right: var(--space-2);
  }

  .pub-doi a {
    color: var(--color-accent);
    text-decoration: none;
    font-family: var(--font-mono);
    transition: color var(--transition-fast);
  }

  .pub-doi a:hover {
    color: var(--color-accent-hover);
    text-decoration: underline;
  }

  .pub-abstract {
    margin-bottom: var(--space-8);
    padding: var(--space-6);
    background: var(--color-surface);
    border-left: 3px solid var(--color-border);
    border-radius: var(--border-radius);
  }

  .pub-abstract h2 {
    font-size: var(--step-0);
    font-weight: 700;
    color: var(--color-text-secondary);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-bottom: var(--space-3);
    font-family: var(--font-sans);
  }

  .pub-abstract p {
    font-size: var(--step-0);
    line-height: 1.7;
    color: var(--color-text-secondary);
    margin: 0;
  }

  .pub-content {
    font-size: var(--step-0);
    line-height: 1.75;
    color: var(--color-text);
  }

  .pub-content :global(h2) {
    font-size: var(--step-2);
    font-weight: 700;
    color: var(--color-text);
    margin-top: var(--space-12);
    margin-bottom: var(--space-4);
    font-family: var(--font-serif);
  }

  .pub-content :global(h3) {
    font-size: var(--step-1);
    font-weight: 600;
    color: var(--color-text);
    margin-top: var(--space-8);
    margin-bottom: var(--space-3);
  }

  .pub-content :global(h4) {
    font-size: var(--step-1);
    font-weight: 600;
    color: var(--color-text-secondary);
    margin-top: var(--space-6);
    margin-bottom: var(--space-2);
  }

  .pub-content :global(p) {
    margin-bottom: var(--space-6);
  }

  .pub-content :global(ul),
  .pub-content :global(ol) {
    list-style: none;
    margin-bottom: var(--space-6);
    padding-left: 0;
  }

  .pub-content :global(li) {
    display: inline;
    margin-bottom: 0;
  }

  .pub-content :global(li)::after {
    content: '. ';
  }

  .pub-content :global(li:last-child)::after {
    content: '';
  }

  .pub-content :global(strong) {
    font-weight: 600;
    color: var(--color-text);
  }

  .pub-content :global(code) {
    background: var(--color-surface);
    padding: var(--space-1) var(--space-2);
    border-radius: var(--border-radius);
    font-size: var(--step-0);
    font-family: var(--font-mono);
    border: 1px solid var(--color-border-light);
  }

  .pub-content :global(blockquote) {
    border-left: 3px solid var(--color-accent);
    padding-left: var(--space-4);
    margin: var(--space-6) 0;
    color: var(--color-text-muted);
    font-style: italic;
  }

  .pub-footer {
    margin-top: var(--space-12);
    padding-top: var(--space-8);
    border-top: 1px solid var(--color-border);
  }

  .back-link {
    display: inline-flex;
    align-items: center;
    gap: var(--space-2);
    color: var(--color-accent);
    text-decoration: none;
    font-weight: 600;
    font-family: var(--font-sans);
    transition: color var(--transition-fast), gap var(--transition-fast);
  }

  .back-link:hover {
    color: var(--color-accent-hover);
    gap: var(--space-3);
  }

  .back-link svg {
    transition: transform var(--transition-fast);
  }

  .back-link:hover svg {
    transform: translateX(-4px);
  }

  @media (max-width: 768px) {
    .publication-detail {
      padding: var(--space-8) var(--space-4);
    }

    .pub-title {
      font-size: var(--step-2);
    }

    .pub-metrics {
      flex-direction: column;
      gap: var(--space-4);
    }
  }
</style>
