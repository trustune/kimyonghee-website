---
import BaseLayout from '../layouts/BaseLayout.astro';
import ArticleCard from '../components/ArticleCard.astro';
import StatItem from '../components/StatItem.astro';
import media from '../data/media.json';

const opinionArticles = media.articles.filter(a => a.type === 'opinion');
const editorialArticles = media.articles.filter(a => a.type === 'editorial');
---

<BaseLayout title="Media" description="Expert opinion pieces and editorials on media policy, OTT, and AI regulation">
  <div class="media-page">
    <header class="page-header">
      <h1 data-lang="en">Media</h1>
      <h1 data-lang="ko">미디어 기고</h1>
      <p class="page-description" data-lang="en">
        Expert opinion pieces and editorials on media policy, OTT, and AI regulation, primarily published in The Electronic Times.
      </p>
      <p class="page-description" data-lang="ko">
        미디어 정책, OTT, AI 규제에 관한 전문가 칼럼 및 시론, 주로 전자신문에 게재.
      </p>
      <div class="stats">
        <div class="stat-wrapper">
          <StatItem
            value={opinionArticles.length}
            label="Opinion Pieces"
            align="left"
            data-lang="en"
          />
          <span data-lang="ko" style="text-align: left;">
            <div style="font-size: 2rem; font-weight: 600; color: #1e40af;">{opinionArticles.length}</div>
            <div style="font-size: 0.875rem; color: #6b7280;">전문가 칼럼</div>
          </span>
        </div>
        <div class="stat-wrapper">
          <StatItem
            value={editorialArticles.length}
            label="Editorials"
            align="left"
            data-lang="en"
          />
          <span data-lang="ko" style="text-align: left;">
            <div style="font-size: 2rem; font-weight: 600; color: #1e40af;">{editorialArticles.length}</div>
            <div style="font-size: 0.875rem; color: #6b7280;">시론</div>
          </span>
        </div>
      </div>
    </header>

    {opinionArticles.length > 0 && (
      <section class="media-section">
        <h2 class="section-title" data-lang="en">Expert Opinion Pieces</h2>
        <h2 class="section-title" data-lang="ko">전문가 칼럼</h2>
        <div class="article-list">
          {opinionArticles.sort((a, b) => new Date(b.date) - new Date(a.date)).map(article => (
            <ArticleCard article={article} variant="full" />
          ))}
        </div>
      </section>
    )}

    {editorialArticles.length > 0 && (
      <section class="media-section">
        <h2 class="section-title" data-lang="en">Editorials</h2>
        <h2 class="section-title" data-lang="ko">시론</h2>
        <div class="article-list">
          {editorialArticles.sort((a, b) => new Date(b.date) - new Date(a.date)).map(article => (
            <ArticleCard article={article} variant="full" />
          ))}
        </div>
      </section>
    )}
  </div>
</BaseLayout>

<style>
  .media-page {
    max-width: 1200px;
    margin: 0 auto;
    padding: 4rem 2rem;
  }

  .page-header {
    margin-bottom: 4rem;
    padding-bottom: 2rem;
    border-bottom: 2px solid #1e40af;
  }

  .page-header h1 {
    font-family: 'Paperozi', 'Merriweather', serif;
    font-size: 3rem;
    color: #1e40af;
    margin-bottom: 1rem;
  }

  .page-description {
    font-size: 1.125rem;
    color: #6b7280;
    line-height: 1.7;
    margin-bottom: 2rem;
  }

  .stats {
    display: flex;
    gap: 3rem;
    margin-top: 2rem;
  }

  .media-section {
    margin-bottom: 4rem;
  }

  .section-title {
    font-family: 'Paperozi', 'Merriweather', serif;
    font-size: 1.875rem;
    color: #1f2937;
    margin-bottom: 2rem;
    padding-bottom: 0.5rem;
    border-bottom: 1px solid #e5e7eb;
  }

  .article-list {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  @media (max-width: 768px) {
    .media-page {
      padding: 2rem 1rem;
    }

    .page-header h1 {
      font-size: 2rem;
    }

    .stats {
      flex-direction: column;
      gap: 1.5rem;
    }
  }
</style>
