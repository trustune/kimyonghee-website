---
import BaseLayout from '../layouts/BaseLayout.astro';
import ArticleCard from '../components/ArticleCard.astro';
import media from '../data/media.json';

const opinionArticles = media.articles.filter(a => a.type === 'opinion');
const editorialArticles = media.articles.filter(a => a.type === 'editorial');
---

<BaseLayout title="Media" description="Expert opinion pieces and editorials on media policy, OTT, and AI regulation">
  <div class="media-page">
    <header class="page-header">
      <h1>Media</h1>
      <p class="page-description">
        Expert opinion pieces and editorials on media policy, OTT, and AI regulation, primarily published in The Electronic Times.
      </p>
      <div class="stats">
        <div class="stat-item">
          <span class="stat-number">{opinionArticles.length}</span>
          <span class="stat-label">Opinion Pieces</span>
        </div>
        <div class="stat-item">
          <span class="stat-number">{editorialArticles.length}</span>
          <span class="stat-label">Editorials</span>
        </div>
      </div>
    </header>

    {opinionArticles.length > 0 && (
      <section class="media-section">
        <h2 class="section-title">Expert Opinion Pieces</h2>
        <div class="article-list">
          {opinionArticles.sort((a, b) => new Date(b.date).getTime() - new Date(a.date).getTime()).map(article => (
            <ArticleCard article={article} variant="full" />
          ))}
        </div>
      </section>
    )}

    {editorialArticles.length > 0 && (
      <section class="media-section">
        <h2 class="section-title">Editorials</h2>
        <div class="article-list">
          {editorialArticles.sort((a, b) => new Date(b.date).getTime() - new Date(a.date).getTime()).map(article => (
            <ArticleCard article={article} variant="full" />
          ))}
        </div>
      </section>
    )}
  </div>
</BaseLayout>

<style>
  .media-page {
    max-width: var(--max-width);
    margin: 0 auto;
    padding: 0 2rem;
  }

  .page-header {
    margin-bottom: 2.5rem;
    padding-bottom: 1.5rem;
    border-bottom: 1px solid var(--color-border);
  }

  .page-header h1 {
    font-family: var(--font-heading);
    font-size: 2rem;
    font-weight: 700;
    color: var(--color-text);
    margin: 0 0 0.75rem 0;
  }

  .page-description {
    font-size: 1rem;
    color: var(--color-text-secondary);
    line-height: 1.6;
    margin: 0 0 1.5rem 0;
  }

  .stats {
    display: flex;
    gap: 2rem;
  }

  .stat-item {
    display: flex;
    align-items: baseline;
    gap: 0.5rem;
  }

  .stat-number {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--color-accent);
  }

  .stat-label {
    font-size: 0.875rem;
    color: var(--color-text-secondary);
  }

  .media-section {
    margin-bottom: 2.5rem;
  }

  .section-title {
    font-family: var(--font-heading);
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--color-text);
    margin: 0 0 1.5rem 0;
    padding-bottom: 0.5rem;
    border-bottom: 1px solid var(--color-border);
  }

  .article-list {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  @media (max-width: 768px) {
    .media-page {
      padding: 0 1rem;
    }

    .page-header h1 {
      font-size: 1.75rem;
    }

    .stats {
      flex-direction: column;
      gap: 1rem;
    }
  }
</style>
